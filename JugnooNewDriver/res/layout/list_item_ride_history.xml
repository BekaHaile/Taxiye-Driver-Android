<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:splitMotionEvents="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:splitMotionEvents="false" >

            <LinearLayout
                android:id="@+id/customerPaidRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:splitMotionEvents="false" >

                <TextView
                    android:id="@+id/textViewCustomerPaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:singleLine="true"
                    android:text="Customer Paid: Rs. 0"
                    android:textColor="@color/bg_grey_opaque"
                    android:textSize="30px" />
                
                <TextView
                    android:id="@+id/textViewFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:singleLine="true"
                    android:text="Fare: Rs. 0"
                    android:textColor="@color/blue_btn"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/balanceRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:splitMotionEvents="false" >

                <TextView
                    android:id="@+id/textViewBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:singleLine="true"
                    android:text="Balance: Rs. 0"
                    android:textColor="@color/bg_grey_opaque"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/textViewJugnooSubsidy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:singleLine="true"
                    android:text="+ Jugnoo Subsidy: Rs. 0"
                    android:textColor="@color/bg_grey_opaque"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fromRl"
                android:layout_width="600px"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:splitMotionEvents="false" >

                <TextView
                    android:id="@+id/fromText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:singleLine="true"
                    android:text="@string/from"
                    android:textColor="@color/bg_grey_opaque"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/fromValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:text="Elante shjksfjkrhldehkfthlrtewterwtrwtywery"
                    android:textColor="@color/bg_grey_opaque"
                    android:textSize="36px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toRl"
                android:layout_width="600px"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:splitMotionEvents="false" >

                <TextView
                    android:id="@+id/toText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:singleLine="true"
                    android:text="@string/to"
                    android:textColor="@color/bg_grey_opaque"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/toValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:text="Elante shjksfjkrhldehkfthlrtewterwtrwtywery"
                    android:textColor="@color/bg_grey_opaque"
                    android:textSize="36px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/distTimeRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:splitMotionEvents="false" >

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_marginLeft="10px"
                    android:src="@drawable/location"
                    android:tag="mwar" />

                <TextView
                    android:id="@+id/distanceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:singleLine="true"
                    android:text="5.6 Km"
                    android:textColor="@color/bg_grey_opaque"
                    android:textSize="30px" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/time"
                    android:tag="mwar" />

                <TextView
                    android:id="@+id/rideTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:singleLine="true"
                    android:text="10 min"
                    android:textColor="@color/bg_grey_opaque"
                    android:textSize="30px" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dateTimeRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:splitMotionEvents="false" >
                
                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_marginLeft="10px"
                    android:src="@drawable/time"
                    android:tag="mwar" />

                <TextView
                    android:id="@+id/dateTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:singleLine="true"
                    android:text="23 June, 2014 18:88 AM"
                    android:textColor="@color/bg_grey_opaque"
                    android:textSize="30px" />
                
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginTop="10px"
                android:background="@drawable/shadow_up" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:gravity="right"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/couponImg"
                android:layout_width="72px"
                android:layout_height="47px"
                android:layout_below="@+id/fareValue"
                android:src="@drawable/free_ride_icon"
                android:tag="mwar"
                android:visibility="visible"
                 />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>