<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/bg_grey_opaque"
        android:splitMotionEvents="false" >

        <Button
            android:id="@+id/backBtn"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector"
            android:tag="mwar" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Add Cash"
            android:textColor="@color/white"
            android:textSize="48px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewCashByCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80px"
            android:gravity="center"
            android:text="Cash given by Customer"
            android:textColor="@color/black_text"
            android:textSize="36px" />

        <EditText
            android:id="@+id/editTextCashAmount"
            android:layout_width="500px"
            android:layout_height="80px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70px"
            android:background="#0000"
            android:gravity="center"
            android:hint="@string/rupee_zero"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:singleLine="true"
            android:textColor="@color/black_text"
            android:textColorHint="@color/black_text_alpha"
            android:textSize="50px" />

        <ImageView
            android:layout_width="500px"
            android:layout_height="2px"
            android:layout_gravity="center_horizontal"
            android:src="@color/grey_light_alpha" />

        <Button
            android:id="@+id/buttonAddCustomerCash"
            android:layout_width="648px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70px"
            android:background="@drawable/blue_btn_selector"
            android:text="ADD CUSTOMER CASH"
            android:textColor="@drawable/white_color_selector"
            android:textSize="@dimen/button_text_size" />
        
        <Button
            android:id="@+id/buttonNoCash"
            android:layout_width="648px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40px"
            android:background="@drawable/red_btn_selector"
            android:text="NO CASH"
            android:textColor="@drawable/white_color_selector"
            android:textSize="@dimen/button_text_size"
            android:visibility="gone"
             />
        
    </LinearLayout>

</LinearLayout>