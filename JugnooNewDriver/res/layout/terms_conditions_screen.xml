<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white"
    android:orientation="vertical" 
        android:splitMotionEvents="false">

    <LinearLayout
        android:splitMotionEvents="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
         >

        <RelativeLayout
            android:id="@+id/topRl"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/bg_grey_opaque" 
        android:splitMotionEvents="false">
        
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Terms and Conditions"
                android:textColor="@color/white"
                android:textSize="48px" />
            
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="890px"
        android:splitMotionEvents="false">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="20px"
                android:paddingRight="20px"
        android:splitMotionEvents="false"
                >
                
                <TextView
                android:id="@+id/textViewTermsAndConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="left"
                android:textColor="@color/bg_grey_opaque"
                android:textSize="30px"
                android:layout_marginTop="20px"
                android:text="x" />
                
                
            </LinearLayout>
            
            
            
        </ScrollView>
        
        <ImageView 
                android:layout_width="680px"
                        android:layout_height="1px"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/bg_grey_opaque"
                />
        
        <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
        android:splitMotionEvents="false"
                >
                
            
            
            

                    <Button
                        android:id="@+id/buttonAgree"
                        android:layout_width="247px"
                        android:layout_height="84px"
                        android:layout_marginRight="40px"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/blue_btn_selector"
                        android:singleLine="true"
                        android:text="Agree"
                        android:textColor="@drawable/white_color_selector"
                        android:textSize="@dimen/button_text_size" 
                android:layout_gravity="center_horizontal"
                />
                    
                    <Button
                        android:id="@+id/buttonCancel"
                        android:layout_width="247px"
                        android:layout_height="84px"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="40px"
                        android:background="@drawable/red_btn_selector"
                        android:singleLine="true"
                        android:text="@string/cancel"
                        android:textColor="@drawable/white_color_selector"
                        android:textSize="@dimen/button_text_size" 
                android:layout_gravity="center_horizontal"
                />
				</RelativeLayout>
        
    </LinearLayout>

</LinearLayout>