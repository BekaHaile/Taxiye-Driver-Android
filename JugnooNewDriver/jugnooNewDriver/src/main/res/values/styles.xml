<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="RatingBarBlue" parent="android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/driver_ratting_star_orange_selector</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:maxHeight">56dp</item>
    </style>

    <style name="RatingBarWhite" parent="android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_star_white_selector</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>


    <style name="Animations" />

    <style name="Animations.LoadingDialogFade">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <style name="SplashThemeNormal" parent="AppBaseTheme">
        <item name="android:windowBackground">@drawable/windowBackgroundColor</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">false</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">false</item>
    </style>
    <!-- <style name="SplashThemeWithoutFlags" parent="SplashThemeNormal">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">false</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">false</item>
    </style>-->


    <style name="DialogButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">116dp</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:background">@drawable/orange_btn_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:tag">@string/dont_touch_me</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/maven_pro_medium</item>
    </style>

    <style name="DialogButtonAlternate" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">116dp</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:background">@drawable/menu_black_btn_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:tag">@string/dont_touch_me</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/maven_pro_medium</item>
    </style>


    <style name="ButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">160dp</item>
        <item name="android:minHeight">39dp</item>
        <item name="android:background">@drawable/orange_btn_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:tag">@string/dont_touch_me</item>
        <item name="android:fontFamily">@font/maven_pro_medium</item>
    </style>

    <style name="ButtonThemeAlternate" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">160dp</item>
        <item name="android:minHeight">39dp</item>
        <item name="android:background">@drawable/menu_black_btn_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:tag">@string/dont_touch_me</item>
        <item name="android:fontFamily">@font/maven_pro_medium</item>
    </style>

    <style name="BackArrow">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:src">@drawable/ic_back_selector</item>
        <item name="android:tag">@string/dont_touch_me</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:rotationY">@integer/locale_mirror_flip</item>
    </style>

    <style name="TextTitle">
        <item name="android:tag">@string/dont_touch_me</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColorLight</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/maven_pro_medium</item>
    </style>

    <style name="TextLarge">
        <item name="android:tag">@string/dont_touch_me</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColorLight</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/maven_pro_medium</item>
    </style>

    <style name="TextNormal">
        <item name="android:tag">@string/dont_touch_me</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColorLight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/maven_pro_regular</item>
        <item name="colorControlHighlight">@color/grey_light_more</item>
    </style>

    <style name="TextMedium">
        <item name="android:tag">@string/dont_touch_me</item>
        <item name="android:textColor">@color/textColorMedium</item>
        <item name="android:textColorHint">@color/textColorLight</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/maven_pro_regular</item>
    </style>

    <style name="TextSmall">
        <item name="android:tag">@string/dont_touch_me</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textColorHint">@color/textColorLight</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/maven_pro_regular</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="colorAccent">@color/themeColor</item>
        <item name="android:popupBackground">@drawable/menu_black_btn_selector</item>
        <item name="android:textAppearance">@style/TextNormal</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextLarge</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/TextSmall</item>
    </style>

    <style name="ThemeSwitch">
        <item name="colorControlActivated">
            @color/themeColor
        </item>
        <item name="android:colorForeground">
            @color/grey_light_more
        </item>
    </style>


    <style name="CheckBoxTheme" parent="AppTheme">
        <item name="colorAccent">@color/themeColor</item>
        <item name="android:textColorSecondary">@color/bg_grey</item>
    </style>

    <style name="cross_popup">
        <item name="android:layout_width">73px</item>
        <item name="android:layout_height">73px</item>
        <item name="android:layout_alignEnd">@+id/linearLayoutInner</item>
        <item name="android:layout_alignTop">@+id/linearLayoutInner</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ic_cross_popup_selector</item>
        <item name="android:tag">mwar</item>
        <item name="android:paddingStart">10px</item>
        <item name="android:paddingBottom">10px</item>
        <item name="android:layout_marginEnd">-20px</item>
        <item name="android:layout_marginTop">-20px</item>
    </style>

    <style name="GreyHighlight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">@color/grey_light_more</item>
    </style>

    <style name="DialogFragmentTrans" parent="@android:style/Theme.Translucent.NoTitleBar" />

    <style name="TransparentTheme" parent="Theme.AppCompat.Translucent">
        <item name="colorPrimary">
            @color/transparent
        </item>
        <item name="colorPrimaryDark">
            @color/black
        </item>
        <item name="colorAccent">
            @color/white_light_dark
        </item>
        <item name="colorControlNormal">
            @color/white_light_dark
        </item>
        <item name="colorControlActivated">
            @color/themeColor
        </item>
        <item name="colorControlHighlight">
            @color/white_light_dark
        </item>
        <item name="android:textColorHint">
            #595968
        </item>
        <item name="android:windowContentTransitions">
            true
        </item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
