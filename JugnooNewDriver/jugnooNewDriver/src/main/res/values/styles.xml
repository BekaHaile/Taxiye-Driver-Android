<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="RatingBarBlue" parent="android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/driver_ratting_star_orange_selector</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:maxHeight">56dp</item>
    </style>

    <style name="RatingBarWhite" parent="android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_star_white_selector</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>



    <style name="Animations"/>

    <style name="Animations.LoadingDialogFade">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="DialogButtonOrange" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">116dp</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:background">@drawable/button_white_theme_border</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:tag">@string/dont_touch_me</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DialogButtonGrey" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">116dp</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:background">@drawable/button_white_grey_border</item>
        <item name="android:textColor">@color/grey_dark_button</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:tag">@string/dont_touch_me</item>
        <item name="android:padding">8dp</item>
    </style>


    <style name="ButtonOrange" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">116dp</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:background">@drawable/orange_btn_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:tag">@string/dont_touch_me</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
