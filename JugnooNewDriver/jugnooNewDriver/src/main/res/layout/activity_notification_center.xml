<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/menu_black"
        android:splitMotionEvents="false">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector"
            android:tag="mwar"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/notifications"
            android:textColor="@color/white"
            android:textSize="40px"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayoutNoNotifications"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topRl"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="241px"
            android:layout_height="342px"
            android:src="@drawable/ic_no_items"
            android:tag="mwar"
            />

        <TextView
            android:id="@+id/textViewNoNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="30px"
            android:text="No Current Notifications"
            android:textColor="@color/black"
            android:textSize="32px"
            />

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/topRl"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_request_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true"
            android:scrollbars="vertical"
            />


    </android.support.v4.widget.SwipeRefreshLayout>




</RelativeLayout>