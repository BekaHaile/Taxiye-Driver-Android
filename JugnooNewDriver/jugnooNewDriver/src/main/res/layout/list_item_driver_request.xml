<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720px"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="30px"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg_bordered_selector"
        android:padding="30px"
        android:splitMotionEvents="false"

        >

        <TextView
            android:id="@+id/textViewRequestAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sector 28, Chandigarh"
            android:textColor="@color/black"
            android:textSize="30px"/>

        <RelativeLayout
            android:id="@+id/relativeLayoutDist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewRequestAddress"
            android:layout_marginTop="10px"
            android:splitMotionEvents="false"

            >

            <TextView
                android:id="@+id/textViewRequestDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="100.00 km away"
                android:textColor="@color/black"
                android:textSize="30px"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/textViewRequestFareFactor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate: 144.2x"
                android:textColor="@color/bg_grey_opaque"
                android:textSize="34px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="80px"
                android:layout_marginTop="14px"
                android:layout_alignParentRight="true"

                />

            <ImageView
                android:id="@+id/imageViewRequestType"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0px"
                android:src="@drawable/request_autos"
                android:tag="mwar"/>


            <TextView
                android:id="@+id/textViewRequestTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:singleLine="true"
                android:text="30 sec ago"
                android:textColor="@color/black_translucent"
                android:textSize="30px"
                android:layout_below="@+id/textViewRequestDistance"
                />

            <TextView
                android:id="@+id/textViewOtherRequestDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:singleLine="true"
                android:text="Amount to pay Rs 500"
                android:textColor="@color/black"
                android:textSize="30px"
                android:layout_below="@+id/textViewRequestTime"
                android:visibility="gone"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30px"
                android:layout_below="@+id/textViewOtherRequestDetails"
                >
                <Button
                    android:id="@+id/buttonAcceptRide"
                    android:layout_width="260px"
                    android:layout_height="69px"
                    android:background="@drawable/blue_btn_selector"
                    android:text="ACCEPT"
                    android:textColor="@drawable/white_color_selector"
                    android:textSize="@dimen/button_text_size"
                    />

                <Button
                    android:id="@+id/buttonCancelRide"
                    android:layout_width="260px"
                    android:layout_height="69px"
                    android:background="@drawable/grey_btn_selector"
                    android:text="CANCEL"
                    android:textColor="@drawable/white_color_selector"
                    android:textSize="@dimen/button_text_size"
                    android:layout_marginLeft="80px"
                    />

            </LinearLayout>




        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>