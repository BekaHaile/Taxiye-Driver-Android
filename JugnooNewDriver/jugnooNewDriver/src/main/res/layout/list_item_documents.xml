<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rideHistoryItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="?attr/selectableItemBackground"
    android:splitMotionEvents="false"
    android:theme="@style/GreyHighlight">

    <RelativeLayout
        android:id="@+id/relativeLayoutSelectPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/relativeLayoutSelectPictureStatus"
            android:layout_width="wrap_content"
            android:minHeight="50dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/docType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="12dp"
                android:tag="@string/dont_touch_me"
                android:text="@string/Document_type"
                android:textColor="@color/textColor"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/docRejected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="21dp"
                android:layout_toEndOf="@+id/docType"
                android:text="@string/upload_again"
                android:textColor="@color/red_status"
                android:textSize="9sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/docRequirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/docType"
                android:layout_marginBottom="17dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="16dp"
                android:text="@string/Requirement"
                android:textColor="@color/textColorMedium"
                android:textSize="12sp"
                android:drawablePadding="3dp"
                android:drawableEnd="@drawable/ic_info"/>

        </RelativeLayout>



        <ImageView
            android:id="@+id/imageViewUploadDoc"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_toRightOf="@id/relativeLayoutSelectPictureStatus"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_addimage"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/ivArrowForward"
            android:tag="@string/dont_touch_me"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_navigate_next_black_18dp"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toStartOf="@id/imageViewUploadDoc"
            android:layout_height="wrap_content" />


    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/relativeLayoutImageStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="visible"
        android:layout_below="@+id/relativeLayoutSelectPicture"
        >

        <RelativeLayout
            android:id="@+id/addImageLayout"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/add_img_selector"
            android:orientation="vertical"
            android:padding="0dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/setCapturedImage"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_centerInParent="true"
                android:tag="mwar"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/deleteImage1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="95dp"
            android:src="@drawable/orange_cross"
            android:tag="mwar"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/addImageLayout2"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/addImageLayout"
            android:background="@drawable/add_img_selector"
            android:tag="mwar">

            <ImageView
                android:id="@+id/setCapturedImage2"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_centerInParent="true"
                android:tag="mwar"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/deleteImage2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="216dp"
            android:src="@drawable/orange_cross"
            android:tag="mwar"
            android:visibility="gone"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlDocumentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/relativeLayoutImageStatus"
        >

        <TextView
            android:id="@+id/docStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/uploaded"
            android:textColor="@color/themeColor"
            android:textSize="13sp"/>

        <ImageView
            android:id="@+id/imageViewDocStatusImage"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/docStatus"
            android:src="@drawable/orange_cross"
            android:tag="mwar"
            android:visibility="visible"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/imageViewDocStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/relativeLayoutSelectPicture"
        android:layout_marginEnd="20dp"
        android:src="@drawable/doc_uploaded"/>

    <ImageView
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@color/dividerColor"/>

</RelativeLayout>