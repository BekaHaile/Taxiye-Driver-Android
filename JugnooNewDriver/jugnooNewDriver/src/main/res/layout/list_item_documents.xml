<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720px"
    android:layout_height="wrap_content"
    android:background="@drawable/list_white_selector"
    android:splitMotionEvents="false">

    <LinearLayout
        android:id="@+id/rideHistoryItem"
        android:layout_width="fill_parent"
        android:layout_height="300px"
        android:layout_marginTop="15px"
        android:orientation="vertical"
        android:background="@drawable/box_background_image">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:gravity="bottom">

            <TextView
                android:id="@+id/docType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Document_type"
                android:textColor="@color/black"
                android:layout_marginLeft="18px"
                android:textSize="32px"
                />

            <TextView
                android:id="@+id/docRequirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Requirement"
                android:textColor="@color/black"
                android:layout_marginRight="24px"
                android:layout_alignParentRight="true"
                android:textSize="20px"
                />

        </RelativeLayout>

        <ImageView
            android:layout_width="680px"
            android:layout_height="2px"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20px"
            android:background="@color/grey_dark_less"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:id="@+id/addImageLayout"
                android:layout_width="160px"
                android:layout_height="160px"
                android:layout_marginTop="28px"
                android:layout_marginLeft="30px"
                android:background="@drawable/add_image_box"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_icon2"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="24px"
                    android:background="@drawable/add_image"/>

                <TextView
                    android:id="@+id/addImage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_image"
                    android:textColor="@color/black"
                    android:layout_marginLeft="28px"
                    android:layout_marginTop="22px"
                    android:textSize="20px" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/addImageLayout2"
                android:layout_toRightOf="@+id/addImageLayout"
                android:layout_width="160px"
                android:layout_height="160px"
                android:layout_marginTop="28px"
                android:layout_marginLeft="30px"
                android:background="@drawable/add_image_box"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_icon"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="24px"
                    android:background="@drawable/add_image"/>

                <TextView
                    android:id="@+id/addImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_image"
                    android:textColor="@color/black"
                    android:layout_marginLeft="28px"
                    android:layout_marginTop="22px"
                    android:textSize="20px" />

            </LinearLayout>

            <TextView
                android:id="@+id/docStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_marginRight="28px"
                android:layout_marginTop="90px"
                android:textSize="32px" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>