<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rideHistoryItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="?attr/selectableItemBackground"
    android:splitMotionEvents="false"
    android:theme="@style/GreyHighlight"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tvDocNameAndDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_navigate_next_black_18dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_tick_green"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:paddingTop="15dp"
        android:text="@string/Document_type"
        android:textColor="@color/textColor"
        android:textSize="18sp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvDocImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem="@layout/list_item_document_image"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tvDocStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_tick_green"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:paddingTop="5dp"
        android:text="@string/Document_type"
        android:textColor="@color/textColor"
        android:textSize="13sp"
        android:visibility="gone"
        />

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_new"
        />

</LinearLayout>