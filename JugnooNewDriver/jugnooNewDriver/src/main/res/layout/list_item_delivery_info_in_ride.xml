<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rootLinear"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent"
                android:orientation="vertical">


    <ImageView
        android:id="@+id/imageViewVerticalLine"
        android:layout_width="3px"
        android:layout_height="26px"
        android:layout_marginLeft="41px"
        android:layout_marginBottom="5px"
        android:background="@color/grey_light"
        android:visibility="visible"
    />

    <ImageView
        android:id="@+id/imageViewVerticalLine1"
        android:layout_width="3px"
        android:layout_height="match_parent"
        android:layout_marginLeft="41px"
        android:layout_alignTop="@+id/imageViewHorizontalLineNew"
        android:layout_marginTop="30px"
        android:layout_above="@+id/imageViewFakeBottom"
        android:background="@color/grey_light"
    />

    <!--android:layout_alignBottom="@+id/imageViewHorizontalLineNew"-->

    <ImageView
        android:id="@+id/imageViewHorizontalLineNew"
        android:layout_width="22px"
        android:layout_height="22px"
        android:layout_marginLeft="31px"
        android:layout_marginTop="34px"
        android:background="@drawable/circle_orange"/>

    <ImageView
        android:id="@+id/imageViewFakeBottom"
        android:layout_below="@+id/relativeLayoutCard1"
        android:background="@color/grey_light"
        android:layout_width="2px"
        android:layout_height="1px"/>


    <LinearLayout
        android:id="@+id/relativeLayoutCard1"
        android:layout_width="604px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24px"
        android:layout_marginLeft="76px"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCustomerNameValue"
            android:layout_width="390px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageViewDote"
            android:text="@string/NA"
            android:textSize="32px"/>

        <TextView
            android:id="@+id/textViewCustomerDeliveryAddressValue"
            android:layout_width="525px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32px"
            android:layout_marginTop="2px"
            android:layout_toRightOf="@+id/imageViewDote1"
            android:text="@string/NA"
            android:textSize="28px"/>

        <ImageView
            android:id="@+id/bottomLine"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/grey_light"
            android:layout_marginTop="22px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"/>


    </LinearLayout>

    <View
        android:id="@+id/viewSep"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


</RelativeLayout>
