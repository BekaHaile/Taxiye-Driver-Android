<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="90px"
    android:layout_marginBottom="24px"
    android:background="@drawable/list_white_selector"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/textViewDayDateVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54px"
        android:text="day, date"
        android:textColor="@color/black_text_v2"
        android:textSize="36px" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="48px">

        <TextView
            android:id="@+id/textViewDailyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18px"
            android:layout_toLeftOf="@+id/arrow"
            android:text="Rs. NA"
            android:textColor="@color/black_text_v2"
            android:textSize="36px" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="23px"
            android:layout_height="21px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14px"
            android:src="@drawable/arrow_thick_new" />

    </RelativeLayout>


</RelativeLayout>