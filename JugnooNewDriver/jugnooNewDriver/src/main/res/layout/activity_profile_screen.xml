<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_profile_screen"
              android:layout_width="720px"
              android:layout_height="1134px"
              android:background="@color/white"
              android:orientation="vertical"
              android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/bg_grey_opaque"
        android:splitMotionEvents="false" >

        <Button
            android:id="@+id/backBtn"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector"
            android:tag="mwar" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="48px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15px"
            android:layout_marginRight="20px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewTitleBarDEI"
                android:layout_width="53px"
                android:layout_height="53px"
                android:src="@drawable/ic_dei"
                android:tag="mwar"
                android:layout_marginRight="10px"
                />

            <TextView
                android:id="@+id/textViewTitleBarDEI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4.5"
                android:textColor="@color/white"
                android:textSize="38px"/>

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:background="@drawable/driver_profile_bg">

        <RelativeLayout
            android:id="@+id/profileRl"
            android:layout_width="220px"
            android:layout_height="220px"
            android:layout_centerVertical="true"
            android:splitMotionEvents="false"
            android:layout_marginLeft="40px"
            android:tag="mwar">

            <ImageView
                android:id="@+id/profileBack"
                android:layout_width="220px"
                android:layout_height="220px"
                android:background="@drawable/ring"
                android:tag="mwar"/>

            <ImageView
                android:id="@+id/profileBack2"
                android:layout_width="225px"
                android:layout_height="225px"
                android:background="@drawable/profile_oval"
                android:tag="mwar"/>

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerInParent="true"
                android:tag="mwar"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_toRightOf="@id/profileRl"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/textViewDriverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="42px"
                android:layout_marginTop="30px"
                android:text="@string/name"
                android:textColor="@color/white"
                android:textSize="44px" />

            <TextView
                android:id="@+id/textViewDriverId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="42px"
                android:layout_below="@id/textViewDriverName"
                android:layout_marginTop="5px"
                android:text="@string/driver_id"
                android:textColor="@color/white"
                android:textSize="44px" />

            <TextView
                android:id="@+id/textViewRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="42px"
                android:layout_marginTop="5px"
                android:layout_below="@id/textViewDriverId"
                android:text="@string/rank"
                android:textColor="@color/white"
                android:textSize="44px" />


        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px">

        <TextView
            android:id="@+id/textViewmonthlyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/monthly"
            android:textColor="@color/black_grey"
            android:textSize="48px" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:splitMotionEvents="false"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="540px"
            android:orientation="vertical"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_marginBottom="30px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_grey_rounded_blue_border">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="107px">

            <TextView
                android:id="@+id/textViewMonthlyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="42px"
                android:text="@string/earnings"
                android:textColor="@color/black_grey"
                android:textSize="40px" />

            <TextView
                android:id="@+id/textViewMonthlyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0000"
                android:layout_marginRight="42px"
                android:textColor="@color/blue_btn_pressed"
                android:textSize="40px" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageViewHorizontal1"
                android:background="@color/blue_btn_pressed"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="107px">

                <TextView
                    android:id="@+id/textViewRidesTakenText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:text="@string/rides_taken"
                    android:textColor="@color/black_grey"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/textViewRidesTakenValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0000"
                    android:layout_marginRight="42px"
                    android:textColor="@color/blue_btn_pressed"
                    android:textSize="40px" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageViewHorizontal2"
                android:background="@color/blue_btn_pressed"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="107px">

                <TextView
                    android:id="@+id/textViewRidesCancelledText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:text="@string/rides_missed"
                    android:textColor="@color/black_grey"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/textViewRidesCancelledValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0000"
                    android:layout_marginRight="42px"
                    android:textColor="@color/blue_btn_pressed"
                    android:textSize="40px" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageViewHorizontal3"
                android:background="@color/blue_btn_pressed"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="107px">

                <TextView
                    android:id="@+id/textViewRidesMissedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:text="@string/rides_cancelled"
                    android:textColor="@color/black_grey"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/textViewRidesMissedValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0000"
                    android:layout_marginRight="42px"
                    android:textColor="@color/blue_btn_pressed"
                    android:textSize="40px" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageViewHorizontal4"
                android:background="@color/blue_btn_pressed"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="107px">

                <TextView
                    android:id="@+id/textViewOnlineHoursText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:text="@string/online_hours"
                    android:textColor="@color/black_grey"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/textViewOnlineHoursValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0000"
                    android:layout_marginRight="36px"
                    android:textColor="@color/blue_btn_pressed"
                    android:textSize="40px" />

            </RelativeLayout>


        </LinearLayout>




    </RelativeLayout>

</LinearLayout>