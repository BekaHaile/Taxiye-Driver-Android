                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="42px"
                android:text="@string/earnings"
                android:textColor="@color/black"
                android:textSize="40px" />

            <TextView
                android:id="@+id/textViewMonthlyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0000"
                android:layout_marginRight="42px"
                android:textColor="@color/black"
                android:textSize="40px" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageViewHorizontal1"
                android:background="@color/black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px">

                <TextView
                    android:id="@+id/textViewRidesTakenText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:text="@string/rides_taken"
                    android:textColor="@color/black"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/textViewRidesTakenValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0000"
                    android:layout_marginRight="42px"
                    android:textColor="@color/black"
                    android:textSize="40px" />

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageViewHorizontal3"
                android:background="@color/black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px">

                <TextView
                    android:id="@+id/textViewRidesMissedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:text="@string/rides_cancelled"
                    android:textColor="@color/black"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/textViewRidesMissedValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0000"
                    android:layout_marginRight="42px"
                    android:textColor="@color/black"
                    android:textSize="40px" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageViewHorizontal2"
                android:background="@color/black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px">

                <TextView
