<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_profile_screen"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="720px"
              android:layout_height="1134px"
              android:animateLayoutChanges="true"
              android:background="@color/white"
              android:orientation="vertical"
              android:splitMotionEvents="false"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:splitMotionEvents="false">

        <include layout="@layout/layout_top_bar"/>

        <TextView
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/ic_profile_about"
            android:drawablePadding="3dp"
            android:padding="10dp"
            android:tag="@string/dont_touch_me"
            android:visibility="@integer/show_t_and_c_profile"
            android:text="@string/about"
            android:textColor="@color/textColorTitle"
            android:textSize="13sp"
            />

    </RelativeLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/driverDetailsRLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cvDriverInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20px"
            android:layout_marginStart="20px"
            android:background="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="3dp"
            card_view:cardUseCompatPadding="true"
            >


            <RelativeLayout
                android:id="@+id/driverDetailsRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivEditIcon"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30px"
                    android:layout_marginTop="30px"
                    android:src="@drawable/edit_pencil_icon"
                    android:tag="mwar"/>

                <RelativeLayout
                    android:id="@+id/profileRl"
                    android:layout_width="140px"
                    android:layout_height="140px"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30px"
                    android:layout_marginTop="30px"
                    android:layout_marginBottom="30px"
                    android:splitMotionEvents="false"
                    android:tag="mwar">

                    <ImageView
                        android:id="@+id/profileBack"
                        android:layout_width="140px"
                        android:layout_height="140px"
                        android:background="@drawable/ring"
                        android:tag="mwar"/>

                    <ImageView
                        android:id="@+id/profileImg"
                        android:layout_width="134px"
                        android:layout_height="134px"
                        android:layout_centerInParent="true"
                        android:tag="mwar"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="30px"
                    android:layout_toEndOf="@id/profileRl">

                    <TextView
                        android:id="@+id/textViewDriverName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/name"
                        android:textColor="@color/textColor"
                        android:textSize="40px"/>

                    <product.clicklabs.jugnoo.driver.utils.CustomTextVeiw
                        android:id="@+id/textViewDriverId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/textViewDriverName"
                        android:layout_marginTop="5px"
                        android:text="@string/driver_id"
                        android:textColor="@color/textColorMedium"
                        android:textSize="36px"/>

                    <product.clicklabs.jugnoo.driver.utils.CustomTextVeiw
                        android:id="@+id/textViewRankCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/textViewDriverId"
                        android:layout_marginTop="5px"
                        android:text="@string/rank_city"
                        android:textColor="@color/textColorMedium"
                        android:textSize="36px"/>

                    <product.clicklabs.jugnoo.driver.utils.CustomTextVeiw
                        android:id="@+id/textViewRankOverall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/textViewRankCity"
                        android:layout_marginTop="5px"
                        android:text="@string/rank_overall"
                        android:textColor="@color/textColorMedium"
                        android:textSize="36px"/>

                    <RelativeLayout
                        android:id="@+id/layoutEditProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewRankOverall"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textViewEditProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="42px"
                            android:layout_marginTop="5px"
                            android:text="@string/Edit_profile"
                            android:textColor="@color/white"
                            android:textSize="40px"
                            />

                        <ImageView
                            android:id="@+id/editIcon"
                            android:layout_width="42px"
                            android:layout_height="42px"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10px"
                            android:layout_toEndOf="@+id/textViewEditProfile"
                            android:background="@drawable/edit_icon_white"
                            android:tag="mwar"/>
                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cvScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvDriverInfo"
            android:layout_marginEnd="20px"
            android:layout_marginStart="20px"
            android:layout_marginTop="55px"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="3dp"
            card_view:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                    <TextView
                        android:id="@+id/textViewmonthlyScore"
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:gravity="center"
                        android:text="@string/monthly"
                        android:textColor="@color/textColor"
                        android:background="@color/bgColor"
                        android:textSize="38px"/>

                <RelativeLayout
                    android:id="@+id/rlMonthlyEarnings"
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textViewMonthlyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="42px"
                        android:text="@string/earnings"
                        android:textColor="@color/textColorMedium"
                        android:textSize="32px"/>

                    <TextView
                        android:id="@+id/textViewMonthlyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="42px"
                        android:text="0000"
                        android:textColor="@color/textColor"
                        android:textSize="36px"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageViewHorizontal1"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginStart="40px"
                    android:layout_marginEnd="40px"
                    android:background="@color/dividerColor"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90px">

                    <TextView
                        android:id="@+id/textViewRidesTakenText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="42px"
                        android:text="@string/rides_taken"
                        android:textColor="@color/textColorMedium"
                        android:textSize="32px"/>

                    <TextView
                        android:id="@+id/textViewRidesTakenValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="42px"
                        android:text="0000"
                        android:textColor="@color/textColor"
                        android:textSize="36px"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageViewHorizontal3"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="40px"
                    android:layout_marginEnd="40px"
                    android:background="@color/dividerColor"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90px">

                    <TextView
                        android:id="@+id/textViewRidesMissedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="42px"
                        android:text="@string/rides_missed"
                        android:textColor="@color/textColorMedium"
                        android:textSize="32px"/>

                    <TextView
                        android:id="@+id/textViewRidesMissedValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="42px"
                        android:text="0000"
                        android:textColor="@color/textColor"
                        android:textSize="36px"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageViewHorizontal2"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_centerHorizontal="true"
                    android:background="@color/dividerColor"
                    android:layout_marginStart="40px"
                    android:layout_marginEnd="40px"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90px">

                    <TextView
                        android:id="@+id/textViewRidesCancelledText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="42px"
                        android:text="@string/rides_cancelled"
                        android:textColor="@color/textColorMedium"
                        android:textSize="32px"/>

                    <TextView
                        android:id="@+id/textViewRidesCancelledValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="42px"
                        android:text="0000"
                        android:textColor="@color/textColor"
                        android:textSize="36px"/>

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/cvSwitchNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvScore"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            android:tag="@string/dont_touch_me"
            >
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextLarge"
            android:text="@string/waze_navigation"
            android:theme="@style/ThemeSwitch"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>