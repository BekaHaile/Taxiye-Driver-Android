    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:background="@drawable/profile_pic_bg_image"
        android:id="@+id/driverDetailsRL">

        <RelativeLayout
            android:id="@+id/profileRl"
            android:layout_width="220px"
            android:layout_height="220px"
            android:layout_centerVertical="true"
            android:splitMotionEvents="false"
            android:layout_marginLeft="40px"
            android:tag="mwar">

            <ImageView
                android:id="@+id/profileBack"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerInParent="true"
                android:background="@drawable/ring"
                android:tag="mwar"/>

            <ImageView
                android:id="@+id/profileBack2"
                android:layout_width="225px"
                android:layout_height="225px"
                android:background="@drawable/profile_oval"
                android:tag="mwar"/>

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerInParent="true"
                android:tag="mwar"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profileRl"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/textViewDriverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="42px"
                android:layout_marginTop="5px"
                android:text="@string/name"
                android:textColor="@color/white"
                android:textSize="40px" />

            <TextView
                android:id="@+id/textViewDriverId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="42px"
                android:layout_below="@id/textViewDriverName"
                android:layout_marginTop="5px"
                android:text="@string/driver_id"
                android:textColor="@color/white"
                android:textSize="40px" />

            <TextView
                android:id="@+id/textViewRankCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="42px"
                android:layout_marginTop="5px"
                android:layout_below="@id/textViewDriverId"
                android:text="@string/rank_city"
                android:textColor="@color/white"
                android:textSize="40px" />
            <TextView
                android:id="@+id/textViewRankOverall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="42px"
                android:layout_marginTop="5px"
                android:layout_below="@id/textViewRankCity"
                android:text="@string/rank_overall"
                android:textColor="@color/white"
                android:textSize="40px" />

           <RelativeLayout
               android:id="@+id/layoutEditProfile"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/textViewRankOverall">
            <TextView
                android:id="@+id/textViewEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42px"
                android:layout_marginTop="5px"
                android:text="@string/Edit_profile"
                android:textColor="@color/white"
                android:textSize="40px"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/editIcon"
                android:layout_width="42px"
                android:layout_height="42px"
                android:layout_marginLeft="10px"
                android:background="@drawable/edit_icon_white"
                android:layout_toRightOf="@+id/textViewEditProfile"
                android:layout_centerVertical="true"
                android:tag="mwar"/>
           </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_marginTop="55px"
            android:layout_below="@+id/driverDetailsRL">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px">

                <TextView
                    android:id="@+id/textViewmonthlyText"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="65px"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/monthly"
                    android:textColor="@color/black"
                    android:textSize="48px" />

            </RelativeLayout>

            <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2px"-->
