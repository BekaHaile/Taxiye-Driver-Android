<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/transparent"
        android:splitMotionEvents="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false"
        >

        <RelativeLayout
            android:id="@+id/rlt"
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/loading_corner"
        android:splitMotionEvents="false" 
        android:tag="mwar"
        >

            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                >
            
            <product.clicklabs.jugnoo.driver.utils.CustomTextVeiw
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="20px"
                android:paddingEnd="20px"
                android:text="@string/creating_game"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="26px"
                android:textStyle="bold" 
                android:layout_gravity="center_horizontal"
                />

                <product.clicklabs.jugnoo.driver.utils.ProgressWheel
                    xmlns:wheel="http://schemas.android.com/apk/res-auto"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:tag="@string/dont_touch_me"
                    wheel:matProg_barColor="@color/white"
                    wheel:matProg_barWidth="3dp"
                    wheel:matProg_fillRadius="true"
                    wheel:matProg_progressIndeterminate="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            
            
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>