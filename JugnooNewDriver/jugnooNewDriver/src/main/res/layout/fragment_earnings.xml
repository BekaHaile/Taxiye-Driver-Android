<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayoutRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_light_grey"
    android:splitMotionEvents="false">


        <RelativeLayout
            android:id="@+id/relativeLayoutEarnings"
            android:layout_width="match_parent"
            android:layout_marginLeft="-4px"
            android:layout_marginRight="-4px"
            android:layout_marginTop="-4px"
            android:layout_height="204px"
            >

            <TextView
                android:id="@+id/textViewToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/share_activity_text_margin_left"
                android:text="@string/Today"
                android:textColor="@color/black"
                android:textSize="@dimen/share_activity_text_size" />

            <TextView
                android:id="@+id/textViewTodayValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/share_activity_text_margin_right"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/share_activity_number_text_size" />

            <ImageView
                android:id="@+id/imageViewCurrentInv4"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25px"
                android:background="@color/menu_black"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeLayoutWeek"
            android:layout_width="match_parent"
            android:layout_height="@dimen/share_activity_bar_height"
            android:layout_marginLeft="-4px"
            android:layout_marginRight="-4px">

            <TextView
                android:id="@+id/textViewWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/share_activity_text_margin_left"
                android:text="@string/Last_week"
                android:textColor="@color/black"
                android:textSize="@dimen/share_activity_text_size" />

            <TextView
                android:id="@+id/textViewWeekValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/share_activity_text_margin_right"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/share_activity_number_text_size" />

            <ImageView
                android:id="@+id/imageViewCurrentInv2"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25px"
                android:background="@color/menu_black"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutMonth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/share_activity_bar_height"
            android:layout_marginLeft="-4px"
            android:layout_marginRight="-4px">

            <TextView
                android:id="@+id/textViewMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/share_activity_text_margin_left"
                android:text="@string/Last_month"
                android:textColor="@color/black"
                android:textSize="@dimen/share_activity_text_size" />

            <TextView
                android:id="@+id/textViewMonthValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/share_activity_text_margin_right"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/share_activity_number_text_size" />

            <ImageView
                android:id="@+id/imageViewCurrentInv1"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25px"
                android:background="@color/menu_black"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/textViewDataEffective"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/data_effective_format"
            android:textColor="@color/black"
            android:textSize="@dimen/share_activity_text_size_small"
            android:layout_marginTop="@dimen/share_activity_data_text_margin_top" />

</LinearLayout>