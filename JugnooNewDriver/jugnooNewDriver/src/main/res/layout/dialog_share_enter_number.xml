<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/innerRl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200px"
        android:layout_marginStart="50px"
        android:layout_marginEnd="50px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false" >

        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1px"
            android:splitMotionEvents="false" >

            <TextView
                android:id="@+id/textViewDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="40px"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:text="@string/enter_customer_phone_no"
                android:textColor="@color/grey_dark_more"
                android:textSize="44px" />



            <RelativeLayout
                android:id="@+id/relativeLayoutCustomerNumber"
                android:layout_width="460px"
                android:layout_height="80px"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="60px" >

                <TextView
                    android:id="@+id/tvCountryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text=""
                    android:hint="@string/code"
                    android:textColor="@color/text_color"
                    android:textSize="17sp"
                    android:drawableEnd="@drawable/ic_arrow_down_vector"
                    android:drawablePadding="3dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:tag="@string/dont_touch_me"
                    android:layout_centerVertical="true"
                    />

                <EditText
                    android:id="@+id/customerNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:inputType="number"
                    android:maxLength="14"
                    android:hint="@string/phone_number"
                    android:textSize="44px"
                    android:singleLine="true"
                    android:textColor="@color/grey_black"
                    android:background="@drawable/transparent"
                    android:layout_toEndOf="@+id/tvCountryCode"
                    />

                <ImageView 
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:src="@color/themeColor"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    />
                
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:tag="@string/dont_touch_me"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnCancel"
                    style="@style/DialogButtonAlternate"
                    android:text="@string/cancel"
                    />

                <Button
                    android:id="@+id/btnOk"
                    style="@style/DialogButton"
                    android:text="@string/ok"
                    android:layout_marginStart="20dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>