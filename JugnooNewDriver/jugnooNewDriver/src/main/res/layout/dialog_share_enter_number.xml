<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/innerRl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false" >

        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1px"
            android:splitMotionEvents="false" >

            <TextView
                android:id="@+id/textViewDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="40px"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:text="कस्टमर का नंबर डालें"
                android:textColor="@color/grey_dark_more"
                android:textSize="48px" />



            <RelativeLayout
                android:id="@+id/relativeLayoutCustomerNumber"
                android:layout_width="390px"
                android:layout_height="60px"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="60px" >


                <EditText
                    android:id="@+id/customerNumber"
                    android:layout_width="380px"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="10"
                    android:hint="फोन नंबर "
                    android:textSize="44px"
                    android:singleLine="true"
                    android:textColor="@color/grey_black"
                    android:background="@drawable/transparent"
                    />

                <ImageView 
                    android:layout_width="350px"
                    android:layout_height="3px"
                    android:src="@color/musturd_jugnoo"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    />
                
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0px"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="309px"
                    android:layout_height="match_parent"
                    android:background="@drawable/grey_btn_br_selector"
                    android:singleLine="true"
                    android:text="@string/cancel"
                    android:textColor="@drawable/white_color_selector"
                    android:textSize="34px" />

                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="309px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/blue_btn_bl_selector"
                    android:singleLine="true"
                    android:text="@string/ok"
                    android:textColor="@drawable/white_color_selector"
                    android:textSize="34px" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>