<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:id="@+id/subsDesc"
        android:gravity="center"
        android:text="@string/subscription_desc"
        android:textColor="@color/black"
        android:textSize="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:id="@+id/tvBalance"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@+id/subsDesc"
        android:textColor="@color/black"
        android:textSize="18dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSubscriptionPackages"
        android:layout_below="@+id/tvBalance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none"
        android:layout_above="@+id/tvSkip"
        android:fadeScrollbars="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/tvSkip"
        android:layout_centerInParent="true"
        android:text="@string/skip"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:textSize="18dp"
        />
    <RelativeLayout
        android:id="@+id/relativeLayoutGreat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageViewThumbsUpGif"
            android:layout_width="620px"
            android:layout_height="969px"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_thumbs_up"
            />
    </RelativeLayout>

</RelativeLayout>