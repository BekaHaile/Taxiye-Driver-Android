<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relative"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="720px"
              android:layout_height="1134px"
              android:background="@color/white"
              android:orientation="vertical"
              android:splitMotionEvents="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:splitMotionEvents="false">

        <RelativeLayout
            android:id="@+id/topRl"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:background="@color/bg_grey_opaque"
            android:splitMotionEvents="false">

            <Button
                android:id="@+id/backBtn"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:background="@drawable/back_btn_selector"
                android:tag="mwar"/>

            <RelativeLayout
                android:id="@+id/topRlDaily"
                android:layout_width="240px"
                android:layout_height="match_parent"
                android:splitMotionEvents="false">

                <TextView
                    android:id="@+id/textViewDailyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12px"
                    android:text="Today"
                    android:textColor="@color/white"
                    android:textSize="30px"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/textViewDailyValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewDailyText"
                    android:layout_centerHorizontal="true"
                    android:text="@string/rupee_zero"
                    android:textColor="@color/white"
                    android:textSize="32px"/>


            </RelativeLayout>

            <ImageView
                android:id="@+id/imgView1"
                android:layout_width="2px"
                android:layout_height="120px"
                android:background="@color/white"
                android:layout_toRightOf="@+id/topRlDaily"
                />

            <RelativeLayout
                android:id="@+id/topRlMonthly"
                android:layout_width="230px"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/imgView1"
                android:splitMotionEvents="false">


                <TextView
                    android:id="@+id/textViewMonthlyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12px"
                    android:text="This Month"
                    android:textColor="@color/white"
                    android:textSize="30px"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewMonthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewMonthlyText"
                    android:layout_centerHorizontal="true"
                    android:text="@string/rupee_zero"
                    android:textColor="@color/white"
                    android:textSize="32px"/>

            </RelativeLayout>


            <ImageView
                android:id="@+id/imgView2"
                android:layout_width="2px"
                android:layout_height="120px"
                android:background="@color/white"
                android:layout_toRightOf="@+id/topRlMonthly"                />

            <RelativeLayout
                android:id="@+id/topRlReferralMoney"
                android:layout_width="250px"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/imgView2"
                android:splitMotionEvents="false">


                <TextView
                    android:id="@+id/textViewReferralMoneyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12px"
                    android:text="Referral Money"
                    android:textColor="@color/white"
                    android:textSize="28px"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewReferralMoneyValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewReferralMoneyText"
                    android:layout_centerHorizontal="true"
                    android:text="@string/rupee_zero"
                    android:textColor="@color/white"
                    android:textSize="32px"/>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayoutHistoryTabs"
            android:layout_width="match_parent"
            android:layout_height="72px"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:id="@+id/relativeLayoutRides"
                    android:layout_width="360px"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textViewRides"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/rides"
                        android:textColor="@color/bg_grey_opaque"
                        android:textSize="32px"
                        />

                    <ImageView
                        android:id="@+id/imageViewRides"
                        android:layout_width="200px"
                        android:layout_height="4px"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_tab_grey_selector"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutMissed"
                    android:layout_width="360px"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textViewMissed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/missed"
                        android:textColor="@color/bg_grey_opaque"
                        android:textSize="32px"
                        />

                    <ImageView
                        android:id="@+id/imageViewMissed"
                        android:layout_width="200px"
                        android:layout_height="4px"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_tab_grey_selector"/>
                </RelativeLayout>


            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_grey_opaque"/>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerDriverHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>