<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/driverInitialLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false"
    android:visibility="visible"
    >

    <Button
        android:id="@+id/driverInitialMyLocationBtn"
        android:layout_width="110px"
        android:layout_height="110px"
        android:layout_alignParentRight="true"
        android:background="@drawable/new_my_loc_button"
        android:tag="mwar"/>


    <LinearLayout
        android:id="@+id/linearLayoutJugnooOff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/black_translucent_level_3"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jugnooOffText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/jugnoo_off"
            android:textColor="@color/white"
            android:textSize="44px"
            android:visibility="visible"
        />

        <TextView
            android:id="@+id/textViewDocText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/NA"
            android:textColor="@color/white"
            android:textSize="44px"
            android:layout_marginTop="48px"
            android:visibility="visible"
        />

        <TextView
            android:id="@+id/textViewDocDayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/NA"
            android:textColor="@color/white"
            android:textSize="44px"
            android:layout_marginTop="12px"
            android:visibility="visible"
        />

        <Button
            android:id="@+id/buttonUploadOnInitial"
            android:layout_width="380px"
            android:layout_height="88px"
            android:layout_marginTop="48px"
            android:background="@drawable/orange_btn_selector"
            android:text="@string/upload"
            android:textColor="@color/white"
            android:textSize="36px"/>

    </LinearLayout>
</RelativeLayout>