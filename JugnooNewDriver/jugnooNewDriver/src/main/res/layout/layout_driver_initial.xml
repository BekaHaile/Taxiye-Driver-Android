<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/driverInitialLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false"
    android:visibility="visible"
    android:layout_marginTop="@dimen/top_bar_height"
    >
    <RelativeLayout
        android:id="@+id/relativeLayoutBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px">

    <RelativeLayout
        android:id="@+id/relativeLayoutLastRideEarning"
        android:layout_width="match_parent"
        android:layout_height="135px"
        android:gravity="center_vertical"
        android:visibility="visible"
        android:background="@drawable/background_white_rounded_orange_bordered">

        <TextView
            android:id="@+id/textViewDriverEarningOnScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_trip_earning"
            android:layout_marginLeft="32px"
            android:textSize="28px"/>

        <TextView
            android:id="@+id/textViewDriverEarningOnScreenDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDriverEarningOnScreen"
            android:text="@string/NA"
            android:layout_marginLeft="32px"
            android:textSize="24px"/>

        <TextView
            android:id="@+id/textViewDriverEarningOnScreenValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="26px"
            android:text="@string/NA"
            android:textColor="@color/new_orange"
            android:textSize="44px"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutCancelRide"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:background="@drawable/background_white_rounded_orange_bordered">

        <TextView
            android:id="@+id/textViewCancellationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_ride_by_customer"
            android:layout_centerHorizontal="true"
            android:textSize="32px"/>

    </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/driverInformationBtn"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayoutBanner"
        android:layout_marginTop="24px"
        android:layout_marginRight="36px"
        android:background="@drawable/icon_i"
        android:tag="mwar"/>

    <Button
        android:id="@+id/driverInitialMyLocationBtn"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="60px"
        android:layout_marginLeft="36px"
        android:background="@drawable/new_my_loc_button"
        android:tag="mwar"/>

    <TextView
        android:id="@+id/jugnooOffText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/white_translucent"
        android:gravity="center"
        android:text="@string/jugnoo_off"
        android:textColor="@color/black"
        android:textSize="44px"
        android:visibility="visible"
        />
</RelativeLayout>