<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/rv"
             android:layout_width="720px"
             android:layout_height="1134px"
             android:layout_marginTop="400px"
             android:orientation="vertical"
             android:splitMotionEvents="false"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false"
        >


        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:splitMotionEvents="false"

            >

            <TextView
                android:id="@+id/textHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/blue_btn"
                android:textSize="50px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:visibility="gone"

                />

            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="800px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Message"
                android:layout_marginTop="20px"
                android:textColor="@color/black"
                android:lineSpacingExtra="10px"
                android:textSize="34px"
                android:paddingLeft="20px"
                android:paddingRight="20px"

                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92px"
            android:orientation="horizontal"
            android:layout_marginTop="24px"
            android:background="@drawable/blue_btn_selector">

            <TextView
                android:id="@+id/timeOutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:singleLine="true"
                android:text="@string/time_left"
                android:textColor="@drawable/white_color_selector"
                android:textSize="@dimen/button_text_size"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/timeOutValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64px"
                android:background="@drawable/blue_btn_selector"
                android:singleLine="true"
                android:text="@string/ok"
                android:textColor="@drawable/white_color_selector"
                android:textSize="84px"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>