<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/rv"
             android:layout_width="720px"
             android:layout_height="1134px"
             android:splitMotionEvents="false"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="400px"
        android:layout_marginLeft="42px"
        android:layout_marginRight="42px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false"
        >


        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:splitMotionEvents="false"

            >

            <TextView
                android:id="@+id/textHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/blue_btn"
                android:textSize="50px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:visibility="gone"

                />

            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="800px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/message"
                android:layout_marginTop="32px"
                android:textColor="@color/black"
                android:lineSpacingExtra="10px"
                android:textSize="34px"
                android:paddingLeft="32px"
                android:paddingRight="32px"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dialog_border_color"
                android:layout_marginTop="32px"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92px"
            android:orientation="horizontal">

            <product.clicklabs.jugnoo.driver.utils.CustomTextVeiw
                android:id="@+id/timeOutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:text="@string/time_left"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/button_text_size"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/timeOutValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58px"
                android:singleLine="true"
                android:text="@string/ok"
                android:textColor="@color/theme_color"
                android:textSize="72px"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                />
        </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>