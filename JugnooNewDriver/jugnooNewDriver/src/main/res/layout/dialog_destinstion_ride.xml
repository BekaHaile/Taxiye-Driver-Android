<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="@string/dont_touch_me"
    android:splitMotionEvents="false">
<RelativeLayout
    android:id="@+id/innerRl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="30px"
    android:background="@drawable/dialog_background_color"
    android:splitMotionEvents="false"
    android:layout_centerInParent="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/title"
    android:layout_alignParentTop="true"
    android:layout_gravity="center_horizontal"
    android:background="@color/black"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/ivloc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location_on_black_24dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:id="@+id/textHead"
        android:layout_toEndOf="@id/ivloc"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Select Address Type"
        android:textColor="@color/white"
        android:textSize="22sp"

        />
</RelativeLayout>
    <LinearLayout
        android:animateLayoutChanges="true"
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:orientation="vertical"
        android:padding="15dp"
        android:splitMotionEvents="false">


        <TextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:lineSpacingExtra="10px"
            android:maxHeight="800px"
            android:paddingStart="20px"
            android:paddingEnd="20px"
            android:text="@string/message"
            android:textColor="@color/black"
            android:textSize="34px"
            android:visibility="gone"

            />


        <LinearLayout
            android:id="@+id/llHome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_tranparend_red_v2_selector"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivRadioHome"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/radio_unslelcet" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="top"
                android:text="@string/home"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                android:fontFamily="@font/maven_pro_medium"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llWork"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_tranparend_red_v2_selector"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:id="@+id/ivRadioWork"
                    android:layout_height="12dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/radio_unslelcet" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="@string/work"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                android:fontFamily="@font/maven_pro_medium"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOther"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_tranparend_red_v2_selector"
            >


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:id="@+id/ivRadioOther"
                    android:layout_height="12dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/radio_unslelcet" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="@string/other"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                android:fontFamily="@font/maven_pro_medium"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/etOther"
            style="@style/TextNormal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_background"
            android:hint="@string/other"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:visibility="gone"

            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
        <Button
            android:layout_marginEnd="70dp"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:textColor="@color/white"
            android:id="@+id/btnCancel"
            android:text="@string/cancel"
            android:background="@drawable/menu_black_btn_selector"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:textColor="@color/white"
            android:id="@+id/btnOk"
            android:text="@string/submit"
            android:background="@drawable/orange_btn_selector"/>
</LinearLayout>

    </LinearLayout>

</RelativeLayout>
</RelativeLayout>