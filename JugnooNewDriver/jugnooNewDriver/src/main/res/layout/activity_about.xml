<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/layout_top_bar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:splitMotionEvents="false" 

            >

            <RelativeLayout
                android:id="@+id/relativeLayoutRateUs"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/background_white_selector" >

                <ImageView
                    android:id="@+id/ivRate"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_about_rateus"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/textViewRateUs"
                    android:layout_toEndOf="@+id/ivRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/rate_us_on_play_store"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/stroke_color_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutLikeUs"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/background_white_selector" >

                <ImageView
                    android:id="@+id/ivLike"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_about_like"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/textViewLike"
                    android:layout_toEndOf="@+id/ivLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/like_us_on_facebook"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/stroke_color_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutTNC"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/background_white_selector" >

                <ImageView
                    android:id="@+id/ivTNC"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_about_tnc"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/textViewTNC"
                    android:layout_toEndOf="@+id/ivTNC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/stroke_color_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutPrivacy"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/background_white_selector" >

                <ImageView
                    android:id="@+id/ivPrivacy"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_about_privacy"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/textViewPrivacy"
                    android:layout_toEndOf="@+id/ivPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/stroke_color_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutWho"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/background_white_selector" >

                <ImageView
                    android:id="@+id/ivWho"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_about_who_we_are"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/textViewWho"
                    android:layout_toEndOf="@+id/ivWho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/who_are_we"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/stroke_color_light" />
            </RelativeLayout>
            
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>