<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/topRlOuter"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98px"
    android:background="@color/black_top_bar_bg"
    android:splitMotionEvents="false">


    <Button
        android:id="@+id/menuBtn"
        android:layout_width="82px"
        android:layout_height="82px"
        android:layout_centerVertical="true"
        android:background="@drawable/menu_btn_selector"
        android:tag="mwar"/>

    <TextView
        android:id="@+id/temptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/JUGNOO"
        android:textColor="@color/white"
        android:textSize="48px"/>

    <Button
        android:id="@+id/checkServerBtn"
        android:layout_width="82px"
        android:layout_height="82px"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/transparent"
        android:longClickable="true"/>


    <LinearLayout
        android:id="@+id/linearLayout_DEI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="100px"
        android:layout_marginTop="19px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/imageViewTitleBarDEI"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginRight="7px"
            android:src="@drawable/top_bar_star_icon"
            android:tag="mwar"
            />

        <TextView
            android:id="@+id/textViewTitleBarDEI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:gravity="center"
            android:text="4.5"
            android:textColor="@color/white"
            android:textSize="44px"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/RelativeLayoutNotificationCenter"
        android:layout_width="90px"
        android:layout_height="80px"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15px"
        android:layout_marginTop="18px"
        android:gravity="center_vertical"
        >


        <ImageView
            android:id="@+id/imageViewNotification"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_centerInParent="true"
            android:padding="10px"
            android:src="@drawable/notification_icon"
            android:tag="mwar"
            />

        <TextView
            android:id="@+id/textViewNotificationValue"
            android:layout_width="32px"
            android:layout_height="35px"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_notification_unread"
            android:gravity="center_horizontal"
            android:paddingTop="2px"
            android:tag="mwar"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="20px"
            />


    </RelativeLayout>

</RelativeLayout>