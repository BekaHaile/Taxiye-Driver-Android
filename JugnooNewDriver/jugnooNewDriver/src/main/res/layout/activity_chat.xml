<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_background">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="720px"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/black_top_bar_bg" >

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/chat"
            android:layout_toEndOf="@+id/imageViewBack"
            android:layout_marginEnd="12px"
            android:textColor="@color/white"
            android:layout_marginStart="10px"
            android:textSize="40px" />

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBar"
        android:layout_above="@+id/recyclerViewChatOptions"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewChatOptions"
        android:layout_width="match_parent"
        android:layout_above="@+id/shadowUp"
        android:layout_centerVertical="true"
        android:layout_height="80px"
        android:layout_marginTop="18px"
        android:layout_marginBottom="6px"
        android:splitMotionEvents="false"
        android:visibility="visible"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        android:layout_below="@+id/topBar"/>

    <ImageView
        android:id="@+id/shadowUp"
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_marginTop="8px"
        android:background="@drawable/shadow_up_light"
        android:layout_above="@+id/rlInput"/>

    <RelativeLayout
        android:id="@+id/rlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="20px">

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_toStartOf="@+id/action_send"
            android:background="@color/white"
            android:hint="@string/type_message_here"
            android:layout_centerVertical="true"
            android:maxHeight="96px"
            android:paddingStart="20px"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color_light"
            android:textSize="@dimen/text_size_30" />

        <ImageView
            android:id="@+id/action_send"
            android:layout_width="59px"
            android:layout_height="59px"
            android:layout_marginStart="20px"
            android:layout_marginEnd="10px"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="10px"
            android:tag="mwar"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_send_msg" />
    </RelativeLayout>

</RelativeLayout>