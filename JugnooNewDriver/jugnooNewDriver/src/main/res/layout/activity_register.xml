<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relative"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="720px"
              android:layout_height="1134px"
              android:background="@drawable/splash_new_background"
              android:orientation="vertical"
              android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/transparent"
        android:splitMotionEvents="false">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector"
            android:textSize="@dimen/button_text_size"/>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/register"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/button_text_size"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/mainLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:splitMotionEvents="false">


        <ImageView
            android:id="@+id/imageViewJugnooLogo"
            android:layout_width="300px"
            android:layout_height="240px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5px"
            android:background="@drawable/jugnoo_white_logo"
            android:tag="mwar"
            android:visibility="visible"/>


        <LinearLayout
            android:id="@+id/etLayout"
            android:layout_width="670px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px"
            android:background="@drawable/background_white_rounded_orange_bordered"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:splitMotionEvents="false">


            <RelativeLayout
                android:layout_width="630px"
                android:layout_height="120px"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/imageViewName"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="48px"
                    android:layout_marginTop="22px"
                    android:background="@drawable/ic_email"/>


                <EditText
                    android:id="@+id/nameEt"
                    android:layout_width="525px"
                    android:layout_height="90px"
                    android:layout_toRightOf="@+id/imageViewName"
                    android:background="@drawable/transparent"
                    android:capitalize="words"
                    android:hint="@string/name"
                    android:paddingLeft="15px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_black_light"
                    android:textSize="34px"/>

                <ImageView
                    android:id="@+id/imageViewNameLine"
                    android:layout_width="525px"
                    android:layout_height="2px"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/nameEt"
                    android:layout_marginLeft="72px"
                    android:background="@color/black"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="630px"
                android:layout_height="120px"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/imageViewPhone"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="48px"
                    android:layout_marginTop="22px"
                    android:background="@drawable/phone_icon"/>


                <EditText
                    android:id="@+id/phoneNoEt"
                    android:layout_width="525px"
                    android:layout_height="90px"
                    android:layout_toRightOf="@+id/imageViewPhone"
                    android:background="@drawable/transparent"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:maxLength="14"
                    android:paddingLeft="15px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_black_light"
                    android:textSize="34px"/>

                <ImageView
                    android:id="@+id/imageViewPhoneNoLine"
                    android:layout_width="525px"
                    android:layout_height="2px"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/phoneNoEt"
                    android:layout_marginLeft="72px"
                    android:background="@color/black"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="630px"
                android:layout_height="120px"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageViewCity"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="48px"
                    android:layout_marginTop="22px"
                    android:background="@drawable/home_shape"/>


                <Spinner
                    android:id="@+id/selectCitySp"
                    android:layout_width="525px"
                    android:layout_height="90px"
                    android:layout_toRightOf="@+id/imageViewCity"
                    android:background="@drawable/transparent"
                    android:capitalize="words"
                    android:dropDownSelector="@drawable/arrow_down"
                    android:hint="@string/auto_number"
                    android:paddingLeft="0px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/black"
                    android:textSize="34px"/>

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="20px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="90px"
                    android:layout_marginTop="32px"
                    android:background="@drawable/arrow_down"/>

                <ImageView
                    android:id="@+id/imageViewCityLine"
                    android:layout_width="525px"
                    android:layout_height="2px"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/selectCitySp"
                    android:layout_marginLeft="72px"
                    android:background="@color/black"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="630px"
                android:layout_height="120px"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/imageViewVehicleType"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="48px"
                    android:layout_marginTop="22px"
                    android:background="@drawable/auto_icon_front_new"/>


                <Spinner
                    android:id="@+id/VehicleType"
                    android:layout_width="525px"
                    android:layout_height="90px"
                    android:layout_toRightOf="@+id/imageViewVehicleType"
                    android:background="@drawable/transparent"
                    android:capitalize="words"
                    android:dropDownSelector="@drawable/arrow_down"
                    android:hint="@string/auto_number"
                    android:paddingLeft="0px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/black"
                    android:textSize="34px"/>

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="20px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="90px"
                    android:layout_marginTop="32px"
                    android:background="@drawable/arrow_down"/>

                <ImageView
                    android:id="@+id/imageViewVehicleTypeLine"
                    android:layout_width="525px"
                    android:layout_height="2px"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/VehicleType"
                    android:layout_marginLeft="72px"
                    android:background="@color/black"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="630px"
                android:layout_height="110px"
                android:gravity="center_vertical"
