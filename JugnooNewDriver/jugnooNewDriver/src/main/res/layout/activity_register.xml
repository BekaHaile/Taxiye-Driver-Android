                    android:hint="@string/auto_number"
                    android:paddingLeft="0px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/black"
                    android:textSize="34px"/>

                <ImageView
