<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rv"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="720px"
             android:layout_height="1134px"
             android:orientation="vertical"
             android:splitMotionEvents="false"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false"
        android:layout_centerInParent="true"
        >


        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:orientation="vertical"
            android:paddingBottom="40px"
            android:splitMotionEvents="false"

            >

            <TextView
                android:id="@+id/textHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingStart="40px"
                android:paddingEnd="40px"
                android:text="@string/confirmation_code"
                android:textColor="@color/new_orange"
                android:textSize="50px"

                />


            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:paddingStart="40px"
                android:paddingEnd="40px"
                android:text="@string/check_your_registered_email_phone_number_for_otp"
                android:textColor="@color/black"
                android:textSize="32px"

                />


            <EditText
                android:id="@+id/etCode"
                android:layout_width="480px"
                android:layout_height="105px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:hint="@string/enter_code"
                android:inputType="number"
                android:paddingStart="30px"
                android:paddingEnd="30px"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="38px"


                />


            <Button
                android:id="@+id/btnConfirm"
                style="@style/DialogButtonOrange"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/done"
                />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
