<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:id="@+id/relativeLayoutCard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35px"
        android:layout_marginBottom="40px"
        android:layout_marginRight="8dp"
        android:layout_marginTop="64px">



        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardCornerRadius="3dp"
            card_view:cardUseCompatPadding="true">


            <LinearLayout
                android:id="@+id/linearLayoutCard1"
                android:layout_width="604px"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_rounded_orange_bordered"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32px">

                    <ImageView
                        android:id="@+id/imageViewDote"
                        android:layout_width="16px"
                        android:layout_height="16px"
                        android:layout_marginLeft="12px"
                        android:src="@drawable/green_dot_icon"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/textViewCustomer1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16px"
                        android:textSize="32px"
                        android:layout_toRightOf="@+id/imageViewDote"
                        android:text="@string/NA"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/textViewDeliveryName"
                    android:layout_width="525px"
                    android:layout_height="wrap_content"
                    android:textSize="32px"
                    android:layout_marginLeft="48px"
                    android:layout_marginTop="28px"
                    android:layout_toRightOf="@+id/imageViewDote1"
                    android:text="@string/NA"/>


                <TextView
                    android:id="@+id/textViewCustomer1Address"
                    android:layout_width="525px"
                    android:layout_height="wrap_content"
                    android:textSize="27px"
                    android:layout_marginLeft="48px"
                    android:layout_marginTop="16px"
                    android:layout_marginBottom="32px"
                    android:layout_toRightOf="@+id/imageViewDote1"
                    android:text="@string/NA"/>


                <LinearLayout
                    android:id="@+id/linearLayoutSelection1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="32px"
                    android:visibility="visible"
                    android:gravity="center">

                    <product.clicklabs.jugnoo.driver.utils.CustomButtonView
                        android:id="@+id/buttonSelect"
                        android:layout_width="236px"
                        android:layout_height="70px"
                        android:background="@drawable/new_orange_btn_normal_rounded"
                        android:text="@string/select"
                        android:visibility="visible"
                        android:textColor="@drawable/white_color_selector"
                        android:textSize="@dimen/button_text_size"/>


                    <product.clicklabs.jugnoo.driver.utils.CustomButtonView
                        android:id="@+id/buttonCancel"
                        android:layout_width="236px"
                        android:layout_height="70px"
                        android:layout_marginLeft="35px"
                        android:visibility="visible"
                        android:background="@drawable/new_menu_black_btn_selector_rounded"
                        android:text="@string/cancel"
                        android:textColor="@drawable/white_color_selector"
                        android:textSize="32px"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <ImageView
        android:id="@+id/imageViewVerticalLine"
        android:layout_width="3px"
        android:layout_height="124px"
        android:background="@color/black_varient"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/imageViewVerticalLine1"
        android:layout_width="3px"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/imageViewHorizontalLineNew"
        android:layout_above="@+id/imageViewFakeBottom"
        android:background="@color/black_varient"
        />

    <!--android:layout_alignBottom="@+id/imageViewHorizontalLineNew"-->

    <ImageView
        android:id="@+id/imageViewHorizontalLineNew"
        android:layout_width="53px"
        android:layout_height="3px"
        android:layout_marginTop="121px"
        android:background="@color/black_varient"/>

    <ImageView
        android:id="@+id/imageViewFakeBottom"
        android:layout_below="@+id/relativeLayoutCard1"
        android:background="@color/black_varient"
        android:layout_width="2px"
        android:layout_height="1px"/>

</RelativeLayout>