<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300px"
              android:layout_height="78px"
              android:id="@+id/linearLayoutRoot"
    android:orientation="horizontal"
              android:gravity="center_vertical"
    >

        <ImageView
            android:id="@+id/passangerImage"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="25px"
            android:layout_marginRight="25px"
            android:src="@drawable/superhappy_face"

            />

        <product.clicklabs.jugnoo.driver.utils.CustomTextVeiw
            android:id="@+id/driverPassengerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shanker"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="40px" />

</LinearLayout>
