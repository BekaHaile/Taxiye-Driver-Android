<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">



    <TextView
        android:id="@+id/tv_refer_driver"
        android:drawableEnd="@drawable/ic_hippo_support_right_arrow"
        android:padding="10dp"
        android:layout_marginBottom="1dp"
        android:text="@string/refer_a_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_refer_customer"
        android:drawableEnd="@drawable/ic_hippo_support_right_arrow"
        android:padding="10dp"
        android:layout_marginBottom="1dp"
        android:text="@string/refer_a_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_advertise_us"
        android:drawableEnd="@drawable/ic_hippo_support_right_arrow"
        android:padding="10dp"
        android:text="@string/advertise_for_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>


