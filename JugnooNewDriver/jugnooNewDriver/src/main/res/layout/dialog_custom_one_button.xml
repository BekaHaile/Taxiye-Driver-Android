<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/rv"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="720px"
             android:layout_height="1134px"
             android:orientation="vertical"
             android:splitMotionEvents="false"
    >

    <RelativeLayout
        android:id="@+id/tour_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/red_status"
        android:layout_below="@+id/topBar"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tour_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32px"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:padding="26px"
            android:layout_toLeftOf="@+id/cross_tour"
            android:layout_alignParentLeft="true"
            />

        <ImageView
            android:id="@+id/cross_tour"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18px"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_cross_et_pressed"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="620px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false"
        >


        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1px"
            android:splitMotionEvents="false"

            >

            <TextView
                android:id="@+id/textHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/title"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:padding="20px"
                android:textColor="@color/blue_btn"
                android:textSize="50px"
                android:visibility="gone"

                />


            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/message"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:lineSpacingExtra="10px"
                android:maxHeight="800px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:padding="20px"
                android:textColor="@color/black"
                android:textSize="34px"

                />


            <Button
                android:id="@+id/btnOk"
                android:layout_width="400px"
                android:layout_height="83px"
                android:layout_marginBottom="32px"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:background="@drawable/new_orange_btn_selector_rounded"
                android:singleLine="true"
                android:padding="3px"
                android:text="@string/ok"
                android:textColor="@drawable/white_color_selector"
                android:textSize="@dimen/button_text_size"
                />


        </LinearLayout>
    </RelativeLayout>

</FrameLayout>