<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relative"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="720px"
              android:layout_height="1134px"
              android:background="@drawable/background_white"
              android:orientation="vertical"
              android:splitMotionEvents="false">


    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/black_top_bar_bg"
        android:splitMotionEvents="false">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector" android:rotationY="@integer/locale_mirror_flip"
            android:textColor="@drawable/blue_alpha_color_selector"
            android:textSize="@dimen/button_text_size"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/forgot_password_cap"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false"
        >
        <LinearLayout
            android:id="@+id/mainLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60px"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:splitMotionEvents="false"
            >


            <TextView
                android:id="@+id/forgotPasswordHelpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="35px"
                android:gravity="center"
                android:text="@string/enter_phone_no_to_reset_password"
                android:textColor="@color/black"
                android:textSize="36px"
                />


            <LinearLayout
                android:id="@+id/etLayout"
                android:layout_width="648px"
                android:layout_height="82px"
                android:layout_below="@+id/jugnooLogoBig"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="98px"
                android:padding="2px"
                android:background="@drawable/background_white_rounded_orange_bordered"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:splitMotionEvents="false">


                <ImageView
                    android:layout_width="58px"
                    android:layout_height="64px"
                    android:layout_marginStart="6px"
                    android:layout_gravity="center"
                    android:background="@drawable/phone_icon"/>

                <ImageView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6px"
                    android:background="@color/new_orange"/>

                <EditText
                    android:id="@+id/emailEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10px"
                    android:background="#0000"
                    android:hint="@string/enter_phone_number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="34px"/>
                    />


            </LinearLayout>

            <Button
                android:id="@+id/sendEmailBtn"
                android:layout_width="648px"
                android:layout_height="99px"
                android:layout_marginTop="45px"
                android:background="@drawable/orange_btn_selector"
                android:text="@string/send"
                android:textColor="@drawable/white_color_selector"
                android:textSize="@dimen/button_text_size"/>

            <TextView
                android:id="@+id/extraTextForScroll"
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:layout_marginTop="20px"
                android:text="      "
                android:textColor="@color/white"
                android:textSize="10px"

                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>