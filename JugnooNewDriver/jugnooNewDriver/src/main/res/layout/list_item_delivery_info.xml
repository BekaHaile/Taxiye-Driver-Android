<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rootLinear"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="420px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28px"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_id"
                    android:textColor="@color/new_orange"
                    android:textSize="36px"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/textViewOrderIdValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15px"
                    android:text="00000000000"
                    android:textColor="@color/bg_grey_opaque"
                    android:textSize="42px"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/textViewCustomerName"
                android:layout_width="380px"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:gravity="center_vertical"
                android:text="Aneesh"
                android:textColor="@color/bg_grey_opaque"
                android:textSize="42px"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/textViewCustomerDeliveryAddress"
                android:layout_width="420px"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:gravity="center_vertical"
                android:text="Madhya Marg, 28B, Sector 28, Chandigarh"
                android:textColor="@color/bg_grey_opaque"
                android:textSize="32px"
                android:layout_marginBottom="10px"
                android:visibility="visible"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_marginTop="45px"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/driverPassengerCallRl"
                android:layout_width="230px"
                android:layout_height="70px"
                android:background="@drawable/orange_btn_selector">

                <ImageView
                    android:id="@+id/driverCallIcon"
                    android:layout_width="45px"
                    android:layout_height="45px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35px"
                    android:src="@drawable/call_icon_selector"/>

                <product.clicklabs.jugnoo.driver.utils.CustomTextVeiw
                    android:id="@+id/driverPassengerCallText"
                    android:layout_width="150px"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="115px"
                    android:text="@string/call"
                    android:textColor="@drawable/white_color_selector"
                    android:textSize="42px"/>
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
