<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:orientation="vertical"
        android:splitMotionEvents="false"
         >

    <RelativeLayout
        android:id="@+id/innerRl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false"
         >
        
        
        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40px"
        android:splitMotionEvents="false"
        
             >

            <TextView
                android:id="@+id/textHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="@string/alert"
                android:textColor="@color/new_orange"
                android:textSize="50px" 
                android:paddingLeft="20px"
                android:paddingRight="20px"
                
                />
            
            
            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="800px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/message"
                android:layout_marginTop="20px"
                android:textColor="@color/black"
                android:lineSpacingExtra="10px"
                android:textSize="34px" 
                android:paddingLeft="20px"
                android:paddingRight="20px"
                
                />
            
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                        android:layout_alignParentBottom="true"
        android:splitMotionEvents="false"
                >
                
            

                    <Button
                        android:id="@+id/btnOk"
                        android:layout_width="180px"
                        android:layout_height="83px"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/new_orange_btn_selector_rounded"
                        android:singleLine="true"
                        android:text="@string/ok"
                        android:textColor="@drawable/white_color_selector"
                        android:textSize="@dimen/button_text_size" 
                android:layout_gravity="center_horizontal"
                />
                    
                    
                    <Button
                        android:id="@+id/btnNeutral"
                        android:layout_width="180px"
                        android:layout_height="83px"
                        android:layout_marginRight="20px"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/green_btn_selector"
                        android:singleLine="true"
                        android:text="@string/Neutral"
                        android:textColor="@drawable/white_color_selector"
                        android:textSize="@dimen/button_text_size" 
                android:layout_gravity="center_horizontal"
                />
                    
                    
                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="180px"
                        android:layout_height="83px"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/new_menu_black_btn_selector_corner_rounded"
                        android:singleLine="true"
                        android:text="@string/cancel"
                        android:textColor="@drawable/white_color_selector"
                        android:textSize="@dimen/button_text_size" 
                android:layout_gravity="center_horizontal"
                />
</RelativeLayout>
            
            
        </LinearLayout>
        
    </RelativeLayout>

</FrameLayout>