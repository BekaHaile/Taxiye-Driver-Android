<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relative"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="720px"
              android:layout_height="1134px"
              android:background="@drawable/background_white"
              android:orientation="vertical"
              android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/new_orange"
        android:splitMotionEvents="false">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector"
            android:textColor="@drawable/blue_alpha_color_selector"
            android:textSize="@dimen/button_text_size"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="40px"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/mainLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:splitMotionEvents="false">

        <LinearLayout
            android:id="@+id/etLayout"
            android:layout_width="648px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jugnooLogoBig"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72px"
            android:background="@drawable/transparent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <LinearLayout
                android:layout_width="640px"
                android:layout_height="82px"
                android:background="@drawable/background_white_rounded_orange_bordered"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="2px">

                <ImageView
                    android:layout_width="58px"
                    android:layout_height="64px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6px"
                    android:background="@drawable/ic_email"/>

                <ImageView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6px"
                    android:background="@color/new_orange"/>

                <AutoCompleteTextView
                    android:id="@+id/emailEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2px"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="2px"
                    android:layout_marginTop="2px"
                    android:background="@drawable/background_white"
                    android:hint="@string/phone_number_or_email"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="34px"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="640px"
                android:layout_height="82px"
                android:layout_marginTop="72px"
                android:background="@drawable/background_white_rounded_orange_bordered"
                android:orientation="horizontal"
                android:padding="2px">

                <ImageView
                    android:layout_width="58px"
                    android:layout_height="64px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6px"
                    android:background="@drawable/ic_password"/>

                <ImageView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6px"
                    android:background="@color/new_orange"/>

                <EditText
                    android:id="@+id/passwordEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2px"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="2px"
                    android:layout_marginTop="2px"
                    android:background="@drawable/background_white"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="34px"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/signInBtn"
                android:layout_width="648px"
                android:layout_height="99px"
                android:layout_marginTop="108px"
                android:background="@drawable/orange_btn_selector"
                android:text="@string/login"
                android:textColor="@drawable/white_color_selector"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/forgotPasswordBtn"
                android:layout_width="wrap_content"
                android:layout_height="90px"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:background="@drawable/transparent"
                android:text="@string/forgot_password"
                android:textColor="@color/new_orange"
                android:textSize="36px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="290px"
                    android:layout_height="3px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/new_orange"
                    />

                <TextView
                    android:id="@+id/or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:text="or"
                    android:textColor="@color/new_orange"
                    android:textSize="40px"/>

                <ImageView
                    android:layout_width="290px"
                    android:layout_height="3px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/new_orange"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/signInUsingOtp"
                android:layout_width="648px"
                android:layout_height="99px"
                android:layout_marginTop="54px"
                android:background="@drawable/orange_btn_selector"
                android:text="@string/signin_via_otp"
                android:textColor="@drawable/white_color_selector"
                android:textSize="@dimen/button_text_size"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>