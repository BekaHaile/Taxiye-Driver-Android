<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/rv"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="720px"
             android:layout_height="1134px"
             android:orientation="vertical"
             android:splitMotionEvents="false">

    <RelativeLayout
        android:layout_width="620px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30px"
        android:splitMotionEvents="false">

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@drawable/dialog_background_color"
            card_view:cardCornerRadius="3dp"
            card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <TextView
                android:id="@+id/textHead"
                android:layout_width="match_parent"
                android:layout_height="145px"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/did_you_know"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:padding="20px"
                android:textColor="@color/white"
                android:background="@drawable/background_orange_top_rounded_bordered"
                android:textSize="28px"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/message"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:lineSpacingExtra="10px"
                android:maxHeight="800px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:padding="20px"
                android:textColor="@color/black"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/textMessageEarnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/NA"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:lineSpacingExtra="10px"
                android:maxHeight="800px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:padding="20px"
                android:textColor="@color/black"
                android:textSize="38px"

            />

            <TextView
                android:id="@+id/textMessage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/keep_jugnoo_on"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:lineSpacingExtra="10px"
                android:maxHeight="800px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:padding="20px"
                android:textColor="@color/black"
                android:textSize="26px"

            />


            <Button
                android:id="@+id/btnOk"
                android:layout_width="260px"
                android:layout_height="70px"
                android:layout_marginBottom="32px"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:background="@drawable/new_orange_btn_selector_rounded"
                android:singleLine="true"
                android:padding="3px"
                android:text="@string/ok"
                android:textColor="@drawable/white_color_selector"
                android:textSize="@dimen/button_text_size"
                />

        </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</FrameLayout>