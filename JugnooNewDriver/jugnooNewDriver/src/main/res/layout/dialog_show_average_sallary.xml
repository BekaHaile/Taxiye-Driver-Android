<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rv"
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="720px"
             android:layout_height="1134px"
             android:orientation="vertical"
             android:splitMotionEvents="false">

    <RelativeLayout
        android:layout_width="620px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30px"
        android:splitMotionEvents="false"
        android:layout_centerInParent="true"
        >


            <LinearLayout
                android:id="@+id/rl1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/dialog_background_color"
                android:splitMotionEvents="false">

                <TextView
                    android:id="@+id/textHead"
                    android:layout_width="match_parent"
                    android:layout_height="145px"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="1px"
                    android:layout_marginEnd="1px"
                    android:background="@drawable/background_orange_top_rounded_bordered"
                    android:gravity="center"
                    android:padding="20px"
                    android:paddingStart="20px"
                    android:paddingEnd="20px"
                    android:text="@string/did_you_know"
                    android:textColor="@color/white"
                    android:textSize="32px"
                    android:visibility="visible"/>


                <TextView
                    android:id="@+id/textMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:gravity="center"
                    android:lineSpacingExtra="10px"
                    android:maxHeight="800px"
                    android:padding="10px"
                    android:layout_marginStart="60px"
                    android:layout_marginEnd="60px"
                    android:text="@string/message"
                    android:textColor="@color/grey_light_doc_status"
                    android:textSize="28px"/>

                <TextView
                    android:id="@+id/textMessageEarnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10px"
                    android:gravity="center"
                    android:lineSpacingExtra="10px"
                    android:maxHeight="800px"
                    android:padding="10px"
                    android:paddingStart="20px"
                    android:paddingEnd="20px"
                    android:text="@string/NA"
                    android:textColor="@color/grey_light_doc_status"
                    android:textSize="38px"
                />

                <TextView
                    android:id="@+id/textMessage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10px"
                    android:gravity="center"
                    android:lineSpacingExtra="10px"
                    android:maxHeight="800px"
                    android:padding="10px"
                    android:paddingStart="20px"
                    android:paddingEnd="20px"
                    android:text="@string/keep_jugnoo_on"
                    android:textColor="@color/grey_light_doc_status"
                    android:textSize="28px"
                />


                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="260px"
                    android:layout_height="70px"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="32px"
                    android:layout_marginTop="30px"
                    android:background="@drawable/new_orange_btn_selector_rounded"
                    android:padding="3px"
                    android:singleLine="true"
                    android:text="@string/ok"
                    android:textColor="@drawable/white_color_selector"
                    android:textSize="@dimen/button_text_size"
                />

            </LinearLayout>

    </RelativeLayout>

</RelativeLayout>