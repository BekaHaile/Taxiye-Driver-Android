<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_marginBottom="1dp"
        android:padding="8dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/label_credits"
            android:text="@string/total_credits_earned"
            android:layout_width="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="17sp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_credits_value"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/label_credits"
            android:textColor="@color/textColor"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            tools:text = "200" />

        <TextView
            android:id="@+id/label_comission"
            android:layout_below="@id/tv_credits_value"
            android:text="@string/commission_saved"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:textColor="@color/textColorLight"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_comission_value"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/label_credits"
            android:textColor="@color/textColorLight"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_below="@id/tv_credits_value"
            android:layout_height="wrap_content"
            tools:text = "50" />









    </RelativeLayout>

    <TextView
        android:id="@+id/tv_earn_credits"
        android:drawableEnd="@drawable/ic_hippo_support_right_arrow"
        android:padding="10dp"
        android:layout_marginBottom="1dp"
        android:text="@string/earn_more_credits"
        android:textColor="@color/textColor"
        android:background="@drawable/bg_white_grey_light_selector"
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_share_credits"
        android:drawableEnd="@drawable/ic_hippo_support_right_arrow"
        android:padding="10dp"
        android:background="@drawable/bg_white_grey_light_selector"
        android:text="@string/share_your_credits"
        android:textColor="@color/textColor"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>


