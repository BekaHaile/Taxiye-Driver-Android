<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutStart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewDeliveryline1"
        android:layout_width="6px"
        android:layout_height="40px"
        android:layout_marginStart="42px"
        android:layout_below="@+id/imageViewDeliverycircle"
        android:background="@color/grey_light_delivery"/>

    <ImageView
        android:id="@+id/imageViewDeliverycircle"
        android:layout_width="22px"
        android:layout_height="22px"
        android:layout_marginStart="34px"
        android:layout_marginTop="26px"
        android:src="@drawable/delivery_list_icon"/>

    <TextView
        android:id="@+id/textViewDeliveryStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_30"
        android:text="@string/delivery_start"
        android:textColor="@color/text_color_light"
        android:layout_marginStart="10px"
        android:layout_marginTop="20px"
        android:layout_toEndOf="@+id/imageViewDeliverycircle"
        android:visibility="visible"
        />

</RelativeLayout>