<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutRoot"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/relativeLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/bg_grey_opaque"
        android:splitMotionEvents="false" >

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector"
            android:tag="mwar" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="SUPER DRIVERS"
            android:textColor="@color/white"
            android:textSize="48px" />
    </RelativeLayout>


    <TextView
        android:id="@+id/textViewCurrentPosition"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/black_grey"

        />




        <ListView
            android:id="@+id/listViewDriverLB"
            android:layout_width="match_parent"
            android:layout_height="576px"
            android:divider="@color/black_translucent"
            android:dividerHeight="2px"
            android:listSelector="@drawable/transparent"
            android:splitMotionEvents="false" >
        </ListView>


</LinearLayout>