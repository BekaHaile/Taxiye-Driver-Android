<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rv"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="720px"
             android:layout_height="1134px"
             android:orientation="vertical"
             android:splitMotionEvents="false"
    >

    <RelativeLayout
        android:layout_width="620px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false"
        android:layout_centerInParent="true"
        >

        <Button
            android:id="@+id/buttonCancelPopup"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5px"
            android:text="X"
            android:textSize="42px"
            android:textColor="@color/grey_dark"
            android:background="@color/white"
            android:layout_marginTop="5px"/>

        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1px"
            android:splitMotionEvents="false"

            >
            
            <ImageView
                android:id="@+id/imageViewAuditGif"
                android:layout_width="250px"
                android:layout_height="165px"
                android:layout_marginTop="50px"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/textHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/title"
                android:paddingStart="20px"
                android:paddingEnd="20px"
                android:padding="20px"
                android:textColor="@color/blue_btn"
                android:textSize="50px"
                android:visibility="gone"

                />


            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/message"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:lineSpacingExtra="10px"
                android:maxHeight="800px"
                android:paddingStart="20px"
                android:paddingEnd="20px"
                android:padding="20px"
                android:textColor="@color/black"
                android:textSize="34px"

                />


            <Button
                android:id="@+id/btnOk"
                android:layout_width="400px"
                android:layout_height="83px"
                android:layout_marginBottom="15px"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:background="@drawable/new_orange_btn_selector_rounded"
                android:singleLine="true"
                android:padding="3px"
                android:text="@string/ok"
                android:textColor="@drawable/white_color_selector"
                android:textSize="@dimen/button_text_size"
                />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>