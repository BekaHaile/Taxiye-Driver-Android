<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">


    <Spinner
        android:id="@+id/language_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:popupBackground="@drawable/background_white_rounded_orange_bordered"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/cd_jugnoo_logo"
        android:src="@drawable/splash_driver_logo"
        app:layout_constraintBottom_toTopOf="@+id/label_edt_phone"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent" />

        <TextView
            android:id="@+id/label_edt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/label_edt_phone"
            android:textColor="@color/text_color_splash_heading"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/layout_phone"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_goneMarginBottom="5dp" />


        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.55">

            <TextView
                android:id="@+id/tvCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawableEnd="@drawable/ic_arrow_down_vector"
                android:drawablePadding="3dp"
                android:hint="@string/code"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="17sp"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />


            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:drawablePadding="5dp"
                android:hint="@string/hint_edt_phone"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="@color/text_color_splash"
                android:textSize="17sp"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvCountryCode"
                app:layout_constraintTop_toBottomOf="parent" />


        </android.support.constraint.ConstraintLayout>


        <Button
            android:id="@+id/btn_gen_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/orange_btn_selector"
            android:minWidth="90dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/btn_text_OTP"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_phone" />
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
