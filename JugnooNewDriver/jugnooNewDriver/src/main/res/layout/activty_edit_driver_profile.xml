<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_profile_screen"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="720px"
              android:layout_height="1134px"
              android:animateLayoutChanges="true"
              android:background="@color/white"
              android:orientation="vertical"
              android:splitMotionEvents="false"
    >


    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/menu_black"
        android:splitMotionEvents="false">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector"
            android:tag="mwar"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/white"
            android:textSize="48px"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/driverDetailsRLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/driverDetailsRL"
            android:layout_width="match_parent"
            android:layout_height="350px"
            android:background="@drawable/profile_pic_bg_image">

            <RelativeLayout
                android:id="@+id/profileRl"
                android:layout_width="220px"
                android:layout_height="220px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:splitMotionEvents="false"
                android:tag="mwar">

                <ImageView
                    android:id="@+id/profileBack"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ring"
                    android:tag="mwar"/>

                <ImageView
                    android:id="@+id/profileBack2"
                    android:layout_width="225px"
                    android:layout_height="225px"
                    android:background="@drawable/profile_oval"
                    android:tag="mwar"/>

                <ImageView
                    android:id="@+id/profileImg"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_centerInParent="true"
                    android:tag="mwar"/>
            </RelativeLayout>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/infoLLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/driverDetailsRL"
            android:layout_marginTop="55px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewmonthlyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="32px"
                android:layout_marginLeft="42px"
                android:text="@string/info"
                android:textColor="@color/new_orange"
                android:textSize="48px"/>


            <ImageView
                android:id="@+id/imageViewHorizontal0"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_centerHorizontal="true"
                android:background="@color/grey_light_more"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98px">

                <EditText
                    android:id="@+id/editTextUserName"
                    android:layout_width="590px"
                    android:layout_height="70px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:background="#0000"
                    android:capitalize="words"
                    android:hint="Name"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_text_alpha"
                    android:textCursorDrawable="@null"
                    android:textSize="42px"/>


                <ImageView
                    android:id="@+id/imageViewEditName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="42px"
                    android:background="@drawable/edit_pencil_icon"
                    android:tag="mwar"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageViewHorizontal2"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_centerHorizontal="true"
                android:background="@color/grey_light_more"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98px">

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:layout_toLeftOf="@+id/imageViewEditPhone"
                    android:background="#0000"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:maxLength="14"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_text_alpha"
                    android:textCursorDrawable="@null"
                    android:textSize="42px"/>

                <ImageView
                    android:id="@+id/imageViewEditPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="42px"
                    android:background="@drawable/edit_pencil_icon"
                    android:tag="mwar"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageViewHorizontal1"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_centerHorizontal="true"
                android:background="@color/grey_light_more"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>