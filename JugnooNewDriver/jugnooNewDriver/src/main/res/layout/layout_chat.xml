<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:id="@+id/cvTask"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="58px"
                card_view:cardBackgroundColor="@color/chat_background"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="4dp"
                android:layout_marginTop="16px"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/relativeLayoutSelectCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:visibility="gone">


                    <android.support.v7.widget.CardView
                        android:id="@+id/card1"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="66px"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardCornerRadius="3dp"
                        card_view:cardUseCompatPadding="true">
                        <Button
                            android:id="@+id/btnChat1"
                            android:layout_width="wrap_content"
                            android:layout_height="60px"
                            android:layout_centerVertical="true"
                            android:background="@drawable/transparent"
                            android:paddingStart="12px"
                            android:paddingEnd="12px"
                            android:text="@string/NA"
                            android:textColor="@color/red_v2"
                            android:textSize="24px"/>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card2"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18px"
                        android:layout_marginEnd="16px"
                        android:layout_toEndOf="@+id/card1"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardCornerRadius="3dp"
                        card_view:cardUseCompatPadding="true">

                        <Button
                            android:id="@+id/btnChat2"
                            android:layout_width="wrap_content"
                            android:layout_height="60px"
                            android:layout_centerVertical="true"
                            android:background="@drawable/transparent"
                            android:paddingStart="12px"
                            android:paddingEnd="12px"
                            android:text="@string/NA"
                            android:textColor="@color/red_v2"
                            android:textSize="24px"/>
                    </android.support.v7.widget.CardView>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <Button
            android:id="@+id/btnChatHead"
            android:layout_width="144px"
            android:layout_height="144px"
            android:background="@drawable/chat_icon_eng"/>

    </RelativeLayout>

</RelativeLayout>