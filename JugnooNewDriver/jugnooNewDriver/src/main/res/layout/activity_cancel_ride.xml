<LinearLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="720px"
        android:layout_height="96px">


        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="25px"
            android:text="@string/cancel_ride"
            android:textColor="@color/black"
            android:textSize="36px"/>

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginStart="10px"
            android:padding="20px"
            android:layout_marginTop="25px"
            android:src="@drawable/arrow"
            android:rotationY="@integer/locale_mirror_flip"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_light_grey">


        <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:splitMotionEvents="false"
            android:animateLayoutChanges="true"
            >


            <product.clicklabs.jugnoo.driver.utils.NonScrollListView
                android:id="@+id/listViewCancelOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:divider="@color/transparent"
                android:dividerHeight="10px"
                android:splitMotionEvents="false">
            </product.clicklabs.jugnoo.driver.utils.NonScrollListView>


            <Button
                android:id="@+id/buttonCancelRide"
                style="@style/ButtonTheme"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="@string/ok"
                android:textSize="16dp"
                />


        </LinearLayout>

    </ScrollView>

</LinearLayout>