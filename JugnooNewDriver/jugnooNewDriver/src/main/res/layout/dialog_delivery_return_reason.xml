<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/rv"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="1134px"
             android:orientation="vertical"
             android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/innerRl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="40px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false">


        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0px"
            android:splitMotionEvents="false">


            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22px"
                android:gravity="center"
                android:text="@string/Reason"
                android:lineSpacingExtra="10px"
                android:maxHeight="800px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:textColor="@color/black"
                android:textSize="42px"

                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewReturnOptions"
                android:layout_width="match_parent"
                android:layout_height="560px"
                android:layout_marginTop="22px"
                android:fadeScrollbars="true"
                android:scrollbars="vertical"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="40px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:layout_marginBottom="25px"
                android:layout_gravity="center"
                android:gravity="center"
                android:splitMotionEvents="false"
                >

                <product.clicklabs.jugnoo.driver.utils.CustomButtonView
                    android:id="@+id/btnCancel"
                    android:layout_width="260px"
                    android:layout_height="70px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="300px"
                    android:text="@string/cancel"
                    android:background="@drawable/new_menu_black_btn_selector_rounded"
                    android:textColor="@drawable/white_color_selector"
                    android:textSize="@dimen/button_text_size"
                    />

                <product.clicklabs.jugnoo.driver.utils.CustomButtonView
                    android:id="@+id/btnSubmit"
                    android:layout_width="260px"
                    android:layout_height="70px"
                    android:padding="2px"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/new_orange_btn_selector_rounded"
                    android:text="@string/submit"
                    android:textColor="@drawable/white_color_selector"
                    android:textSize="@dimen/button_text_size"
                    />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>