<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:animateLayoutChanges="true"
    android:background="@drawable/splash_new_background"
    android:splitMotionEvents="false" android:orientation="vertical"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="105px">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector"
            android:textColor="@drawable/blue_alpha_color_selector"
            android:textSize="@dimen/button_text_size"/>


        <TextView
            android:id="@+id/textViewRegDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="162px"
            android:layout_centerVertical="true"
            android:textSize="46px"
            android:visibility="gone"
            android:text="@string/register_as_driver"/>

        <RelativeLayout
            android:id="@+id/selectLanguageLl"
            android:layout_width="320px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="360px"
            android:layout_marginRight="5px"
            android:layout_marginTop="25px"
            android:background="@drawable/background_translucent_white_rounded_orange_bordered"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6px"
                android:background="@drawable/language_icon"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginLeft="6px"
                android:background="@color/new_orange"
                android:visibility="gone"/>

            <Spinner
                android:id="@+id/language_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:visibility="visible"
                android:popupBackground="@drawable/background_white_rounded_orange_bordered"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="30px"
                android:layout_height="22px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15px"
                android:background="@drawable/white_arrow_down"/>

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/viewInitJugnoo"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/viewInitSplashJugnoo"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:visibility="gone"/>


    <RelativeLayout
        android:id="@+id/relativeLayoutJugnooLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:layout_marginTop="140px"
        android:splitMotionEvents="false">


        <ImageView
            android:id="@+id/imageViewJugnooLogo"
            android:layout_width="250px"
            android:layout_height="264px"
            android:layout_centerHorizontal="true"
            android:background="@drawable/new_jugnoo_spalsh_logo"
            android:tag="mwar"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/jugnooTextImgRl"
            android:layout_width="290px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190px"
            android:tag="mwar">

            <ImageView
                android:id="@+id/jugnooTextImg"
                android:layout_width="279px"
                android:layout_height="86px"
                android:tag="mwar"/>

            <ImageView
                android:id="@+id/jugnooTextImg2"
                android:layout_width="70px"
                android:layout_height="90px"
                android:src="@drawable/transparent"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/textViewDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/imageViewJugnooLogo"
            android:layout_marginTop="18px"
            android:text="@string/driver_app"
            android:textColor="@color/white"
            android:textSize="32px"/>


        <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="760px"
        android:layout_marginBottom="24px"
        android:visibility="gone"
        />

    </RelativeLayout>


    <ImageView
        android:id="@+id/viewInitLS"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:visibility="gone"/>


    <RelativeLayout
        android:id="@+id/relativeLayoutLS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="256px"
        android:animateLayoutChanges="true"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/linearLayoutLoginSignupButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:splitMotionEvents="false"
            android:visibility="visible">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="273px"
                    android:layout_height="100px"
                    android:layout_marginTop="32px"
                    android:background="@drawable/background_translucent_white_rounded_orange_bordered"
                    android:text="@string/login"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_34"/>

                <Button
                    android:id="@+id/buttonRegister"
                    android:layout_width="273px"
                    android:layout_height="100px"
                    android:layout_marginTop="32px"
                    android:layout_marginLeft="32px"
                    android:background="@drawable/button_white_selector"
                    android:text="@string/register"
                    android:textAllCaps="true"
                    android:textColor="@color/red_v2"
                    android:textSize="@dimen/text_size_34"/>



            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54px"
                android:layout_marginTop="32px"
                android:visibility="visible"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewHorizontal3"
                    android:layout_width="330px"
                    android:layout_height="3px"
                    android:layout_centerVertical="true"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageViewHorizontal3"
                    android:paddingLeft="10px"
                    android:paddingRight="10px"
                    android:text="@string/or"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:textSize="30px"/>

                <ImageView
                    android:id="@+id/imageViewHorizontal4"
                    android:layout_width="330px"
                    android:layout_height="3px"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textViewName"
                    android:background="@color/white"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/textViewCustomerApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/looking_for_customer_app"
                android:textColor="@color/white"
                android:layout_marginTop="32px"
                android:textSize="36px"/>

            <Button
                android:id="@+id/buttonRegisterTookan"
                android:layout_width="473px"
                android:layout_height="100px"
                android:layout_marginTop="24px"
                android:background="@drawable/button_theme_alpha_white_stroke_selector"
                android:text="@string/register_via_agent"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_34"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/textViewTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_26"/>

        </LinearLayout>


    </RelativeLayout>


    <!-- login buttons -->
    <include layout="@layout/layout_login"/>


    <include layout="@layout/layout_splash_signup"/>

</LinearLayout>