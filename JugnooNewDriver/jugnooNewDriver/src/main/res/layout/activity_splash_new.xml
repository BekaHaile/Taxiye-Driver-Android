<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@drawable/spalsh_new_background"
    android:orientation="vertical"
    android:splitMotionEvents="false">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false"
        >

        <ImageView
            android:id="@+id/imageViewJugnooLogo"
            android:layout_width="340px"
            android:layout_height="270px"
            android:layout_centerHorizontal="true"
            android:background="@drawable/jugnoo_white_logo"
            android:layout_marginTop="200px"
            android:tag="mwar"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/jugnooTextImgRl"
            android:layout_width="390px"
            android:layout_height="390px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="340px"
            android:tag="mwar"
            >


            <ImageView
                android:id="@+id/jugnooTextImg"
                android:layout_width="379px"
                android:layout_height="136px"
                android:tag="mwar"

                />


            <ImageView
                android:id="@+id/jugnooTextImg2"
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@drawable/transparent"

                />

            <ImageView
                android:id="@+id/jugnooAutoImg"
                android:layout_width="387px"
                android:layout_height="252px"
                android:layout_marginTop="80px"
                android:layout_below="@+id/jugnooTextImg2"
                android:src="@drawable/auto_icon"

                />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="760px"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="117px"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/buttonLogin"
                android:text="@string/login"
                android:layout_width="636px"
                android:layout_height="112px"
                android:background="@drawable/background_white_rounded_bordered"
                android:textColor="@color/new_orange"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/buttonRegister"
                android:text="@string/register"
                android:textColor="@drawable/white_color_selector"
                android:layout_width="636px"
                android:layout_height="112px"
                android:layout_marginTop="24px"
                android:background="@drawable/background_white_rounded_bordered"
                android:textSize="@dimen/button_text_size"
                android:visibility="gone"
                />


        </LinearLayout>


    </RelativeLayout>
</LinearLayout>