<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/rv"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="640px"
             android:layout_marginLeft="40px"
             android:layout_height="1134px"
             android:orientation="vertical"
             android:splitMotionEvents="false"
    >

    <RelativeLayout
        android:id="@+id/innerRl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="40px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false"
        >


        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0px"
            android:splitMotionEvents="false"

            >

            <TextView
                android:id="@+id/textHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="@string/alert"
                android:textColor="@color/text_color"
                android:textSize="50px"
                android:visibility="gone"
                android:layout_marginTop="40px"

                />


            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:text="@string/message"
                android:lineSpacingExtra="10px"
                android:maxHeight="800px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:textColor="@color/black"
                android:textSize="34px"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:splitMotionEvents="false"
                android:tag="@string/dont_touch_me"
                >

                <product.clicklabs.jugnoo.driver.utils.CustomButtonView
                    android:id="@+id/btnCancel"
                    style="@style/DialogButtonGrey"
                    android:text="@string/cancel"
                    />
                <product.clicklabs.jugnoo.driver.utils.CustomButtonView
                    android:id="@+id/btnOk"
                    style="@style/DialogButtonOrange"
                    android:text="@string/ok"
                    android:layout_marginStart="30dp"
                    />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>