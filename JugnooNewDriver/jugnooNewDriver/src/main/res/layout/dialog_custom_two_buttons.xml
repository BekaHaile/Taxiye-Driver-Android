<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/rv"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="640px"
             android:layout_marginLeft="40px"
             android:layout_height="1134px"
             android:orientation="vertical"
             android:splitMotionEvents="false"
    >

    <RelativeLayout
        android:id="@+id/innerRl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="40px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false"
        >


        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0px"
            android:splitMotionEvents="false"

            >

            <TextView
                android:id="@+id/textHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="@string/alert"
                android:textColor="@color/blue_btn"
                android:textSize="50px"
                android:visibility="gone"

                />


            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60px"
                android:gravity="center"
                android:text="@string/message"
                android:lineSpacingExtra="10px"
                android:maxHeight="800px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:textColor="@color/black"
                android:textSize="34px"

                />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:layout_marginBottom="25px"
                android:layout_gravity="center"
                android:splitMotionEvents="false"
                >


                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="220px"
                    android:layout_height="83px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="280px"
                    android:background="@drawable/new_orange_btn_selector_rounded"
                    android:singleLine="true"
                    android:text="@string/ok"
                    android:textColor="@drawable/white_color_selector"
                    android:textSize="@dimen/button_text_size"
                    />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="220px"
                    android:layout_height="83px"
                    android:layout_marginLeft="28px"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/new_menu_black_btn_selector_rounded"
                    android:singleLine="true"
                    android:text="@string/cancel"
                    android:textColor="@drawable/white_color_selector"
                    android:textSize="@dimen/button_text_size"
                    />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>