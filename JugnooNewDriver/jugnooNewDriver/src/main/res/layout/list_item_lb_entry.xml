<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110px"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:layout_width="150px"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textViewRank"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_grey_new"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:tag="mwar"
            android:text="1"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/share_lb_text_size_medium"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/textViewName"
        android:layout_width="420px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="160px"
        android:text="@string/lb_name"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/share_lb_text_size_medium"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/textViewNoOfDownloads"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="60px"
        android:gravity="center_vertical|end"
        android:text="100"
        android:textColor="@color/grey_black"
        android:textSize="@dimen/share_lb_text_size_medium"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_new"
        />

</RelativeLayout>