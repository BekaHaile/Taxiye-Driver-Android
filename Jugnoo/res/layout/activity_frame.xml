<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <RelativeLayout
                android:id="@+id/topRl"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:background="@color/bg_grey"
                android:splitMotionEvents="false" >

                <Button
                    android:id="@+id/menuBtn"
                    android:layout_width="82px"
                    android:layout_height="82px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/menu_btn_selector"
                    android:tag="mwar" />

                <Button
                    android:id="@+id/backBtn"
                    android:layout_width="82px"
                    android:layout_height="82px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back_btn_selector"
                    android:tag="mwar"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/jugnooLogo"
                    android:layout_width="185px"
                    android:layout_height="60px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/jugnoo_text_small"
                    android:tag="mwar" 
                    
                    
                    />
                
                <Button
                    android:id="@+id/toggleDebugModeBtn"
                    android:layout_width="82px"
                    android:layout_height="82px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="370px"
                    android:background="@drawable/transparent"
                    android:longClickable="true"
                     />
                
                
                
                

                <TextView
                    android:id="@+id/title"
                    android:layout_width="540px"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="John Paulo"
                    android:textColor="@color/white"
                    android:textSize="40px"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/favBtn"
                    android:layout_width="82px"
                    android:layout_height="82px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/fav_btn_selector"
                    android:tag="mwar" />
            </RelativeLayout>
        

        <RelativeLayout
            android:id="@+id/driverEngagedLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/driverPassengerInfoRl"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:background="@color/white_translucent"
                android:splitMotionEvents="false" >

                <TextView
                    android:id="@+id/driverPassengerName"
                    android:layout_width="420px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:layout_marginTop="20px"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="John Paulo"
                    android:textColor="@color/bg_grey_opaque"
                    android:textSize="40px" />

                <RelativeLayout
                    android:id="@+id/driverPassengerRatingRl"
                    android:layout_width="420px"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/driverPassengerName"
                    android:layout_marginLeft="40px"
                    android:layout_marginTop="10px"
                    android:splitMotionEvents="false" >

                    <ImageView
                        android:id="@+id/driverPassengerRatingStar"
                        android:layout_width="46px"
                        android:layout_height="46px"
                        android:background="@drawable/star_empty" />

                    <TextView
                        android:id="@+id/driverPassengerRatingValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10px"
                        android:layout_toRightOf="@+id/driverPassengerRatingStar"
                        android:singleLine="true"
                        android:text="4.3 Rating"
                        android:textColor="@color/bg_grey_opaque"
                        android:textSize="38px" />
                </RelativeLayout>

                <Button
                    android:id="@+id/driverPassengerCallBtn"
                    android:layout_width="214px"
                    android:layout_height="56px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:background="@drawable/blue_btn_selector"
                    android:text="@string/call"
                    android:textColor="@drawable/white_color_selector"
                    android:textSize="36px" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6px"
                android:layout_below="@+id/driverPassengerInfoRl"
                android:background="@drawable/shadow_down" />

            <RelativeLayout
                android:id="@+id/driverStartRideMainRl"
                android:layout_width="match_parent"
                android:layout_height="380px"
                android:layout_alignParentBottom="true"
                android:splitMotionEvents="false"
                android:visibility="gone" >

                <Button
                    android:id="@+id/driverStartRideMyLocationBtn"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_above="@+id/driverStartRideRl"
                    android:layout_marginBottom="27px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/mylocation_btn_selector"
                    android:tag="mwar" />

                <Button
                    android:id="@+id/driverStartRideBtn"
                    android:layout_width="648px"
                    android:layout_height="99px"
                    android:layout_above="@+id/driverCancelRideBtn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="27px"
                    android:background="@drawable/blue_btn_selector"
                    android:text="@string/start_ride"
                    android:textColor="@drawable/white_color_selector"
                    android:textSize="@dimen/button_text_size" />
                

                <Button
                    android:id="@+id/driverCancelRideBtn"
                    android:layout_width="648px"
                    android:layout_height="99px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="27px"
                    android:background="@drawable/red_btn_selector"
                    android:text="@string/cancel_ride"
                    android:textColor="@drawable/white_color_selector"
                    android:textSize="@dimen/button_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/driverInRideMainRl"
                android:layout_width="match_parent"
                android:layout_height="520px"
                android:layout_alignParentBottom="true"
                android:splitMotionEvents="false"
                android:visibility="visible" >

                <Button
                    android:id="@+id/driverEndRideMyLocationBtn"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/mylocation_btn_selector"
                    android:tag="mwar" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="6px"
                    android:layout_above="@+id/driverInRideInnerRl"
                    android:background="@drawable/shadow_up" />

                <RelativeLayout
                    android:id="@+id/driverInRideInnerRl"
                    android:layout_width="match_parent"
                    android:layout_height="400px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white_translucent"
                    android:splitMotionEvents="false" >

                    <RelativeLayout
                        android:id="@+id/driverIRDistanceRl"
                        android:layout_width="310px"
                        android:layout_height="120px"
                        android:layout_above="@+id/driverRideTimeRl"
                        android:layout_marginBottom="20px"
                        android:layout_marginLeft="40px" >

                        <TextView
                            android:id="@+id/driverIRDistanceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10px"
                            android:text="@string/distance"
                            android:textColor="@color/black"
                            android:textSize="30px" />

                        <TextView
                            android:id="@+id/driverIRDistanceValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/driverIRDistanceText"
                            android:layout_marginTop="10px"
                            android:maxWidth="250px"
                            android:text="100000.00"
                            android:textColor="@color/black"
                            android:textSize="50px" />

                        <TextView
                            android:id="@+id/driverIRDistanceKmText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/driverIRDistanceText"
                            android:layout_marginLeft="10px"
                            android:layout_marginTop="30px"
                            android:layout_toRightOf="@+id/driverIRDistanceValue"
                            android:text="km"
                            android:textColor="@color/black"
                            android:textSize="30px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/driverIRFareRl"
                        android:layout_width="310px"
                        android:layout_height="120px"
                        android:layout_above="@+id/driverRideTimeRl"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="20px"
                        android:layout_marginRight="40px" >

                        <TextView
                            android:id="@+id/driverIRFareText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10px"
                            android:text="@string/fare"
                            android:textColor="@color/black"
                            android:textSize="30px" />

                        <TextView
                            android:id="@+id/driverIRFareRsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/driverIRFareText"
                            android:layout_marginTop="28px"
                            android:text="Rs"
                            android:textColor="@color/black"
                            android:textSize="30px" />

                        <TextView
                            android:id="@+id/driverIRFareValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/driverIRFareText"
                            android:layout_marginLeft="40px"
                            android:layout_marginTop="10px"
                            android:maxWidth="250px"
                            android:text="1000000"
                            android:textColor="@color/black"
                            android:textSize="50px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/driverRideTimeRl"
                        android:layout_width="310px"
                        android:layout_height="120px"
                        android:layout_above="@+id/driverEndRideBtn"
                        android:layout_marginBottom="20px"
                        android:layout_marginLeft="40px"
                        android:background="@drawable/white_bg_rounded_bordered" >

                        <TextView
                            android:id="@+id/driverRideTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10px"
                            android:text="@string/ride_time"
                            android:textColor="@color/black"
                            android:textSize="30px" />

                        <product.clicklabs.jugnoo.PausableChronometer
                            android:id="@+id/waitChronometer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10px"
                            android:textColor="@color/black"
                            android:textSize="50px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/driverWaitRl"
                        android:layout_width="310px"
                        android:layout_height="120px"
                        android:layout_above="@+id/driverEndRideBtn"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="20px"
                        android:layout_marginRight="40px"
                        android:background="@drawable/blue_btn_selector" >

                        <TextView
                            android:id="@+id/driverWaitText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10px"
                            android:text="@string/start_wait"
                            android:textColor="@drawable/white_color_selector"
                            android:textSize="30px" />

                        <product.clicklabs.jugnoo.PausableChronometer
                            android:id="@+id/waitChronometer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10px"
                            android:textColor="@color/white"
                            android:textSize="50px" />
                    </RelativeLayout>

                    <Button
                    android:id="@+id/driverEndRideBtn"
                    android:layout_width="648px"
                    android:layout_height="99px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="27px"
                    android:background="@drawable/red_btn_selector"
                    android:text="@string/end_ride"
                    android:textColor="@drawable/white_color_selector"
                    android:textSize="@dimen/button_text_size" />
                    
                    
                    
                    
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>