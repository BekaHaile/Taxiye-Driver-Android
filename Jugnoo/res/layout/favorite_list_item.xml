<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="495px"
    android:layout_height="127px"
    android:orientation="vertical"
    android:background="@drawable/list_white_selector"
    android:paddingTop="8px"
    android:paddingBottom="8px"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="111px"
        android:orientation="vertical"
        android:background="@color/favorite_bg"
        
        
        >
        
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/favorite_div"
            android:layout_alignParentTop="true"
            />
        
        

        <TextView
            android:id="@+id/name"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:text="Office"
            android:textColor="@drawable/white_color_selector"
            android:textSize="36px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:singleLine="true"
             />
        
        
        <Button 
            android:id="@+id/favDeleteBtn"
            android:layout_width="45px"
            android:layout_height="45px"
            android:background="@drawable/delete_btn_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:tag="mwar"
            />
        
        
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/favorite_div"
            android:layout_alignParentBottom="true"
            />
        
    </RelativeLayout>

</LinearLayout>