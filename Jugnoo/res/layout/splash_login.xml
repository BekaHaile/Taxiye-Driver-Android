<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:orientation="vertical" 
    android:background="@drawable/mockup_login_screen"
    >
    
    <LinearLayout 
        android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:gravity="center_horizontal"
        >
        
        
        <ImageView 
            android:id="@+id/jugnooLogoBig"
            android:layout_width="405px"
            android:layout_height="183px"
            android:background="@drawable/jugnoo_logo_big"
            android:tag="mwar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90px"
            />
        
        
        <LinearLayout 
            android:id="@+id/etLayout"
            android:layout_width="648px"
            android:layout_height="198px"
            android:layout_below="@+id/jugnooLogoBig"
            android:layout_marginTop="50px"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/white_bg_rounded"
            
            >
            
            
            <EditText 
                android:id="@+id/emailEt"
                 android:layout_width="620px"
                android:layout_height="98px"
                android:hint="Email ID"
                android:singleLine="true" 
                android:background="#0000"
                android:textSize="34px"
                />
            
            <ImageView 
                android:layout_width="620px"
                android:layout_height="2px"
                android:background="#E7E7E7"
                />
            
            
            <EditText 
                android:id="@+id/passwordEt"
                 android:layout_width="620px"
                android:layout_height="98px"
                android:hint="Password"
                android:singleLine="true" 
                android:background="#0000"
                android:textSize="34px"
                />
            
            
        </LinearLayout>
        
        
        
        
        
        
    </LinearLayout>
    
    
    
    

</LinearLayout>
