<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/bg_grey_opaque"
        android:splitMotionEvents="false" >

        <Button
            android:id="@+id/backBtn"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector"
            android:tag="mwar" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Share"
            android:textColor="@color/white"
            android:textSize="48px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:splitMotionEvents="false" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                
                <RelativeLayout 
                    android:id="@+id/shareImgRl"
                    android:layout_width="match_parent"
                    android:layout_height="600px"
                    >
                
                <ImageView 
                    android:id="@+id/shareImg"
                    android:layout_width="match_parent"
                    android:layout_height="600px"
                    android:tag="mwar"
                    />
                
                <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    >
                    
                    <Button 
                        android:id="@+id/shareFacebookImg"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@drawable/blue_btn_selector"
                    android:layout_marginLeft="40px"
                    android:tag="mwar"
                    android:text="F"
                    android:textColor="@drawable/white_color_selector"
                        />
                    
                    
                    <Button 
                        android:id="@+id/shareWhatsappImg"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_toRightOf="@+id/shareFacebookImg"
                    android:layout_marginLeft="110px"
                    android:background="@drawable/blue_btn_selector"
                    android:tag="mwar"
                    android:text="W"
                    android:textColor="@drawable/white_color_selector"
                        />
                    
                    <Button 
                        android:id="@+id/shareSMSImg"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_toLeftOf="@+id/shareEMailImg"
                    android:layout_marginRight="110px"
                    android:background="@drawable/blue_btn_selector"
                    android:tag="mwar"
                    android:text="S"
                    android:textColor="@drawable/white_color_selector"
                        />
                    
                    <Button 
                        android:id="@+id/shareEMailImg"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/blue_btn_selector"
                    android:layout_marginRight="40px"
                    android:tag="mwar"
                    android:text="E"
                    android:textColor="@drawable/white_color_selector"
                        />
                    
                </RelativeLayout>
                
                </RelativeLayout>
                
                
                
                <TextView
                        android:id="@+id/textViewSharePromo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewReferUs"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_marginTop="20px"
                        android:gravity="center"
                        android:text="Share your promo code 12345678"
                        android:textColor="@color/black"
                        android:textSize="40px"
                        />
                
                
                <TextView
                        android:id="@+id/textViewSharePromo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewReferUs"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:gravity="center"
                        android:text=" with friends and they will get a free ride because of your referral and once they have used Jugnoo, you will earn a free ride (upto Rs. 100) as well."
                        android:textColor="@color/black"
                        android:textSize="40px"
                        />
                
                
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>