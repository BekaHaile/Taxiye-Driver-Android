<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/bg_grey_opaque"
        android:splitMotionEvents="false" >

        <Button
            android:id="@+id/backBtn"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector"
            android:tag="mwar" />

        <ImageView
            android:id="@+id/jugnooLogo"
            android:layout_width="185px"
            android:layout_height="60px"
            android:layout_centerInParent="true"
            android:background="@drawable/jugnoo_text_small"
            android:tag="mwar" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:splitMotionEvents="false" >

        <TextView
            android:id="@+id/promoText"
            android:layout_width="340px"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Will arrive in 15 mins"
            android:textColor="@color/black_light"
            android:textSize="30px" />

        <Button
            android:id="@+id/proceedBtn"
            android:layout_width="648px"
            android:layout_height="99px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27px"
            android:background="@drawable/blue_btn_selector"
            android:text="Proceed"
            android:textColor="@drawable/white_color_selector"
            android:textSize="@dimen/button_text_size" />
    </RelativeLayout>

</LinearLayout>