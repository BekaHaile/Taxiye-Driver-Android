<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
                    android:id="@+id/requestFinalLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:splitMotionEvents="false"
                    android:visibility="visible" >

                    <Button
                        android:id="@+id/customerInRideMyLocationBtn"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_above="@+id/finalDriverInfoRl"
                        android:layout_marginBottom="40px"
                        android:layout_marginLeft="40px"
                        android:background="@drawable/mylocation_btn_selector"
                        android:tag="mwar" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="6px"
                        android:layout_above="@+id/finalDriverInfoRl"
                        android:background="@drawable/shadow_up" />

                    <RelativeLayout
                        android:id="@+id/finalDriverInfoRl"
                        android:layout_width="match_parent"
                        android:layout_height="307px"
                        android:layout_above="@+id/callDriverBtn"
                        android:layout_marginBottom="26px"
                        android:background="@color/white_translucent"
                        android:splitMotionEvents="false" >

                        <RelativeLayout
                            android:id="@+id/driverImageRL"
                            android:layout_width="225px"
                            android:layout_height="225px"
                            android:layout_marginLeft="80px"
                            android:layout_marginTop="22px"
                            android:splitMotionEvents="false"
                            android:tag="mwar" >

                            <ImageView
                                android:id="@+id/driverImageBg"
                                android:layout_width="225px"
                                android:layout_height="225px"
                                android:background="@drawable/image_border"
                                android:tag="mwar" />

                            <ImageView
                                android:id="@+id/driverImage"
                                android:layout_width="205px"
                                android:layout_height="205px"
                                android:layout_centerInParent="true"
                                android:background="@drawable/transparent"
                                android:scaleType="centerCrop"
                                android:tag="mwar" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/driverName"
                            android:layout_width="340px"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10px"
                            android:layout_marginLeft="10px"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text=" "
                            android:textColor="@color/black_light"
                            android:textSize="30px" />

                        <RelativeLayout
                            android:id="@+id/driverCarRL"
                            android:layout_width="225px"
                            android:layout_height="225px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="80px"
                            android:layout_marginTop="22px"
                            android:splitMotionEvents="false"
                            android:tag="mwar" >

                            <ImageView
                                android:id="@+id/driverCarBg"
                                android:layout_width="225px"
                                android:layout_height="225px"
                                android:background="@drawable/image_border"
                                android:tag="mwar" />

                            <ImageView
                                android:id="@+id/driverCarImage"
                                android:layout_width="205px"
                                android:layout_height="205px"
                                android:layout_centerInParent="true"
                                android:background="@drawable/transparent"
                                android:scaleType="centerCrop"
                                android:tag="mwar" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/driverTime"
                            android:layout_width="340px"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="10px"
                            android:layout_marginRight="10px"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Will arrive in 15 mins"
                            android:textColor="@color/black_light"
                            android:textSize="30px" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="6px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="147px"
                        android:background="@drawable/shadow_down" />

                    <Button
                        android:id="@+id/callDriverBtn"
                        android:layout_width="648px"
                        android:layout_height="99px"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="27px"
                        android:background="@drawable/blue_btn_selector"
                        android:text="@string/call_driver"
                        android:textColor="@drawable/white_color_selector"
                        android:textSize="@dimen/button_text_size" />

                    <TextView
                        android:id="@+id/inRideRideInProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white_translucent"
                        android:gravity="center"
                        android:padding="25px"
                        android:singleLine="true"
                        android:text="@string/ride_in_progress"
                        android:textColor="@color/bg_grey_opaque"
                        android:textSize="32px" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="6px"
                        android:layout_below="@+id/inRideRideInProgress"
                        android:background="@drawable/shadow_down" />
                </RelativeLayout>
    
</FrameLayout>