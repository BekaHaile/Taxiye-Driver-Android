<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
            android:layout_width="495px"
            android:layout_height="match_parent"
            android:background="@color/bg_grey"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:splitMotionEvents="false" >

            <RelativeLayout
                android:id="@+id/profileRl"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110px"
                android:splitMotionEvents="false"
                android:tag="mwar" >

                <ImageView
                    android:id="@+id/profileBack"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:background="@drawable/ring"
                    android:tag="mwar" />

                <ImageView
                    android:id="@+id/profileImg"
                    android:layout_width="270px"
                    android:layout_height="270px"
                    android:layout_centerInParent="true"
                    android:tag="mwar" />
            </RelativeLayout>

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileRl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:gravity="center"
                android:text="John Paulo"
                android:textColor="@color/white"
                android:textSize="34px" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:splitMotionEvents="false" >

                    <RelativeLayout
                        android:id="@+id/driverModeRl"
                        android:layout_width="match_parent"
                        android:layout_height="84px"
                        android:layout_marginTop="40px"
                        android:background="@drawable/transparent"
                        android:splitMotionEvents="false" >

                        <TextView
                            android:id="@+id/driverModeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="42px"
                            android:text="@string/driver_mode"
                            android:textColor="@color/white"
                            android:textSize="34px" />

                        <ImageView
                            android:id="@+id/driverModeToggle"
                            android:layout_width="90px"
                            android:layout_height="72px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20px"
                            android:src="@drawable/on"
                            android:tag="mwar" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/menu_divider" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/jugnooONRl"
                        android:layout_width="match_parent"
                        android:layout_height="84px"
                        android:background="@drawable/transparent"
                        android:splitMotionEvents="false" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/menu_divider" />

                        <TextView
                            android:id="@+id/jugnooONText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="42px"
                            android:text="@string/jugnoo_on"
                            android:textColor="@color/white"
                            android:textSize="34px" />

                        <ImageView
                            android:id="@+id/jugnooONToggle"
                            android:layout_width="90px"
                            android:layout_height="72px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20px"
                            android:src="@drawable/on"
                            android:tag="mwar" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/driverTypeRl"
                        android:layout_width="match_parent"
                        android:layout_height="84px"
                        android:background="@drawable/menu_item_selector"
                        android:splitMotionEvents="false"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/driverTypeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="42px"
                            android:text="@string/driver_type"
                            android:textColor="@color/white"
                            android:textSize="34px" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/menu_divider" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/couponsRl"
                        android:layout_width="match_parent"
                        android:layout_height="84px"
                        android:background="@drawable/menu_item_selector"
                        android:splitMotionEvents="false" >

                        <TextView
                            android:id="@+id/couponsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="42px"
                            android:text="Coupons"
                            android:textColor="@color/white"
                            android:textSize="34px" />
                        
                        <ImageView 
                            android:layout_width="72px"
                            android:layout_height="47px"
                            android:tag="mwar"
                            android:layout_centerVertical="true"
                            android:src="@drawable/free_rides_icon"
                            android:layout_toRightOf="@+id/couponsText"
                            android:layout_marginLeft="20px"
                            
                            />
                        

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/menu_divider" />
                    </RelativeLayout>
                    
                    
                    <RelativeLayout
                        android:id="@+id/inviteFriendRl"
                        android:layout_width="match_parent"
                        android:layout_height="84px"
                        android:background="@drawable/menu_item_selector"
                        android:splitMotionEvents="false" >

                        <TextView
                            android:id="@+id/inviteFriendText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="42px"
                            android:text="@string/invite_friends"
                            android:textColor="@color/white"
                            android:textSize="34px" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/menu_divider" />
                    </RelativeLayout>

                    

                    <RelativeLayout
                        android:id="@+id/bookingsRl"
                        android:layout_width="match_parent"
                        android:layout_height="84px"
                        android:background="@drawable/menu_item_selector"
                        android:splitMotionEvents="false" >

                        <TextView
                            android:id="@+id/bookingsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="42px"
                            android:text="@string/rides"
                            android:textColor="@color/white"
                            android:textSize="34px" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/menu_divider" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/aboutRl"
                        android:layout_width="match_parent"
                        android:layout_height="84px"
                        android:background="@drawable/menu_item_selector"
                        android:splitMotionEvents="false" >

                        <TextView
                            android:id="@+id/aboutText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="42px"
                            android:text="@string/about"
                            android:textColor="@color/white"
                            android:textSize="34px" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/menu_divider" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/supportRl"
                        android:layout_width="match_parent"
                        android:layout_height="84px"
                        android:background="@drawable/menu_item_selector"
                        android:splitMotionEvents="false" >

                        <TextView
                            android:id="@+id/supportText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="42px"
                            android:text="@string/support"
                            android:textColor="@color/white"
                            android:textSize="34px" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/menu_divider" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/sosRl"
                        android:layout_width="match_parent"
                        android:layout_height="84px"
                        android:background="@drawable/menu_item_selector"
                        android:splitMotionEvents="false" >

                        <TextView
                            android:id="@+id/sosText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="42px"
                            android:text="@string/sos"
                            android:textColor="@color/white"
                            android:textSize="34px" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/menu_divider" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/languagePrefrencesRl"
                        android:layout_width="match_parent"
                        android:layout_height="84px"
                        android:background="@drawable/menu_item_selector"
                        android:splitMotionEvents="false"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/languagePrefrencesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="42px"
                            android:text="@string/language_preferences"
                            android:textColor="@color/white"
                            android:textSize="34px" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/menu_divider" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/logoutRl"
                        android:layout_width="match_parent"
                        android:layout_height="84px"
                        android:background="@drawable/menu_item_selector"
                        android:splitMotionEvents="false" >

                        <TextView
                            android:id="@+id/logoutText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="42px"
                            android:text="@string/logout"
                            android:textColor="@color/white"
                            android:textSize="34px" />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    
</FrameLayout>