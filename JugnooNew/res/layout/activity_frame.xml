<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/driverInitialLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/topRlOuter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:splitMotionEvents="false" >

            <RelativeLayout
                android:id="@+id/topRl"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:background="@color/bg_grey"
                android:splitMotionEvents="false" >

                <Button
                    android:id="@+id/menuBtn"
                    android:layout_width="82px"
                    android:layout_height="82px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/menu_btn_selector"
                    android:tag="mwar" />

                <Button
                    android:id="@+id/backBtn"
                    android:layout_width="82px"
                    android:layout_height="82px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back_btn_selector"
                    android:tag="mwar"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/jugnooLogo"
                    android:layout_width="185px"
                    android:layout_height="60px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/jugnoo_text_small"
                    android:tag="mwar" />

                <Button
                    android:id="@+id/checkServerBtn"
                    android:layout_width="82px"
                    android:layout_height="82px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="270px"
                    android:background="@drawable/transparent"
                    android:longClickable="true" />

                <Button
                    android:id="@+id/toggleDebugModeBtn"
                    android:layout_width="82px"
                    android:layout_height="82px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="370px"
                    android:background="@drawable/transparent"
                    android:longClickable="true" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="540px"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text=" "
                    android:textColor="@color/white"
                    android:textSize="40px"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/favBtn"
                    android:layout_width="82px"
                    android:layout_height="82px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/fav_btn_selector"
                    android:tag="mwar"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/christmasBell1"
                android:layout_width="27px"
                android:layout_height="91px"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="27px"
                android:layout_marginTop="70px"
                android:src="@drawable/bell_1" />

            <ImageView
                android:id="@+id/christmasBell2"
                android:layout_width="27px"
                android:layout_height="128px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="43px"
                android:layout_marginTop="70px"
                android:src="@drawable/bell_2" />

            <Button
                android:id="@+id/christmasButton"
                android:layout_width="78px"
                android:layout_height="73px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10px"
                android:layout_marginTop="10px"
                android:background="@drawable/christmas_gift_button_selector"
                android:tag="mwar" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>