<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    	<RelativeLayout
                android:id="@+id/topRlOuter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:splitMotionEvents="false" >

                <RelativeLayout
                    android:id="@+id/topRl"
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:background="@color/bg_grey"
                    android:splitMotionEvents="false" >

                    <Button
                        android:id="@+id/menuBtn"
                        android:layout_width="82px"
                        android:layout_height="82px"
                        android:layout_centerVertical="true"
                        android:background="@drawable/menu_btn_selector"
                        android:tag="mwar" />

                    <Button
                        android:id="@+id/backBtn"
                        android:layout_width="82px"
                        android:layout_height="82px"
                        android:layout_centerVertical="true"
                        android:background="@drawable/back_btn_selector"
                        android:tag="mwar"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/jugnooLogo"
                        android:layout_width="185px"
                        android:layout_height="60px"
                        android:layout_centerInParent="true"
                        android:background="@drawable/jugnoo_text_small"
                        android:tag="mwar" />

                    <Button
                        android:id="@+id/checkServerBtn"
                        android:layout_width="82px"
                        android:layout_height="82px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="270px"
                        android:background="@drawable/transparent"
                        android:longClickable="true" />

                    <Button
                        android:id="@+id/toggleDebugModeBtn"
                        android:layout_width="82px"
                        android:layout_height="82px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="370px"
                        android:background="@drawable/transparent"
                        android:longClickable="true" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="540px"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text=" "
                        android:textColor="@color/white"
                        android:textSize="40px"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/favBtn"
                        android:layout_width="82px"
                        android:layout_height="82px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/fav_btn_selector"
                        android:tag="mwar"
                        android:visibility="gone" />
                </RelativeLayout>
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10px"
                    >
                
                <ImageView
                    android:id="@+id/jugnooMealsImageView"
                    android:layout_width="77px"
                    android:layout_height="55px"
                    android:layout_marginRight="10px"
                    android:background="@drawable/jugnoo_meal_icon"
                    android:tag="mwar" 
                    android:layout_gravity="center_vertical"
                    />
                

                <ImageView
                    android:id="@+id/jugnooShopImageView"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_marginRight="0px"
                    android:background="@drawable/transparent"
                    android:tag="mwar"
                    android:layout_gravity="center_vertical"
                     />
                
                </LinearLayout>
                
            </RelativeLayout>
    

</FrameLayout>