<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout
                    android:id="@+id/driverInitialLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:splitMotionEvents="false"
                    android:visibility="visible" >

                    <RelativeLayout
                        android:id="@+id/driverNewRideRequestRl"
                        android:layout_width="565px"
                        android:layout_height="180px"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="90px"
                        android:background="@drawable/white_bg_bordered"
                        android:gravity="center"
                        android:splitMotionEvents="false"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/driverNewRideRequestText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="You have 1 ride request"
                            android:textColor="@color/black"
                            android:textSize="44px" />

                        <TextView
                            android:id="@+id/driverNewRideRequestClickText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/driverNewRideRequestText"
                            android:gravity="center"
                            android:text="@string/click_to_view"
                            android:textColor="@color/black"
                            android:textSize="48px" />
                    </RelativeLayout>

                    <ListView
                        android:id="@+id/driverRideRequestsList"
                        android:layout_width="match_parent"
                        android:layout_height="920px"
                        android:divider="@color/transparent"
                        android:visibility="gone" >
                    </ListView>

                    <Button
                        android:id="@+id/driverInitialMyLocationBtn"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="40px"
                        android:layout_marginLeft="40px"
                        android:background="@drawable/mylocation_btn_selector"
                        android:tag="mwar" />
                    
                    
                    <RelativeLayout
                    android:id="@+id/jugnooOffLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:splitMotionEvents="false"
                    android:background="@color/white_translucent"
                    android:visibility="visible" 
                    >
                        
                        <TextView
                            android:id="@+id/jugnooOffText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:text="Your Jugnoo is OFF now."
                            android:textColor="@color/black"
                            android:textSize="44px" />
                        
                        
                        </RelativeLayout>
                    
                    
                </RelativeLayout>

</FrameLayout>